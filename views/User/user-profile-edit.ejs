<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZZRH - Edit User Name</title>
    <link rel="stylesheet" href="/css/output.css">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
        }
        .glass-effect {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #1f2937 0%, #000000 100%);
        }
        .hover-lift {
            transition: all 0.3s ease;
        }
        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }
        .profile-avatar {
            background: linear-gradient(135deg, #6b7280 0%, #1f2937 100%);
        }
        .input-focus:focus {
            outline: none;
            border-color: #1f2937;
            box-shadow: 0 0 0 3px rgba(31, 41, 55, 0.1);
        }
    </style>
</head>
<body class="bg-linear-to-br from-gray-50 via-gray-100 to-gray-50 min-h-screen">
    <%- include('../Partials/nav-bar') %>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-6 py-8">
        <div class="flex gap-8">
            <!-- Sidebar -->
            <%- include('../Partials/user-sidebar') %>

            <!-- Edit Username Content -->
            <main class="flex-1">
                <!-- Breadcrumb -->
                <div class="mb-6">
                    <nav class="flex items-center gap-2 text-sm text-gray-600">
                        <a href="/profile" class="hover:text-gray-900 transition">Profile</a>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                        <span class="text-gray-900 font-medium">Edit User Name</span>
                    </nav>
                </div>

                <div class="glass-effect rounded-2xl shadow-xl border border-white/20 overflow-hidden">
                    <!-- Header -->
                    <div class="gradient-bg px-8 py-8 relative overflow-hidden">
                        <div class="absolute inset-0 opacity-10">
                            <div class="absolute top-0 right-0 w-64 h-64 bg-white rounded-full -translate-y-32 translate-x-32"></div>
                            <div class="absolute bottom-0 left-0 w-48 h-48 bg-white rounded-full translate-y-24 -translate-x-24"></div>
                        </div>
                        <div class="relative flex items-center gap-4">
                            <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center">
                                <i class="fas fa-user-edit text-3xl text-white"></i>
                            </div>
                            <div>
                                <h2 class="text-3xl font-bold text-white mb-1">Edit User Name</h2>
                                <p class="text-gray-300">Update your display name</p>
                            </div>
                        </div>
                    </div>

                    <!-- Form -->
                    <div class="px-8 py-8">
                        <form  id="editUsernameForm">
                            <!-- Current Username Display -->
                            <div class="mb-6 p-4 bg-gray-50 rounded-xl border border-gray-200">
                                <p class="text-xs text-gray-500 mb-1 font-medium uppercase tracking-wider">Current User Name</p>
                                <p class="text-lg font-semibold text-gray-700"><%= name %></p>
                            </div>

                            <!-- New Username Input -->
                            <div class="mb-6">
                                <label for="newUsername" class="block text-sm font-semibold text-gray-700 mb-2">
                                    New User Name <span class="text-red-500">*</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <i class="fas fa-user text-gray-400"></i>
                                    </div>
                                    <input 
                                        type="text" 
                                        id="newUsername" 
                                        name="username" 
                                        value="<%= name %>"
                                        class="input-focus w-full pl-12 pr-4 py-3 border-2 border-gray-300 rounded-xl text-gray-900 font-medium transition"
                                        placeholder="Enter your new username"
                                        required
                                        minlength="2"
                                        maxlength="50"
                                    >
                                </div>
                                <p class="mt-2 text-sm text-gray-500">
                                    <i class="fas fa-info-circle mr-1"></i>
                                    Username must be between 2 and 25 characters
                                </p>
                            </div>

                            <!-- Character Counter -->
                            <div class="mb-6 flex items-center gap-2 text-sm">
                                <div class="flex-1 h-2 bg-gray-200 rounded-full overflow-hidden">
                                    <div id="charProgress" class="h-full bg-gradient-to-r from-gray-700 to-gray-900 transition-all duration-300" style="width: 0%"></div>
                                </div>
                                <span id="charCount" class="text-gray-600 font-medium min-w-[60px] text-right">0 / 50</span>
                            </div>

                            <!-- Validation Messages -->
                            <div id="validationMessage" class="hidden mb-6 p-4 rounded-xl"></div>

                            <!-- Action Buttons -->
                            <div class="flex gap-4 pt-4">
                                <button 
                                    type="submit" 
                                    class="flex-1 gradient-bg text-white py-3 px-6 rounded-xl font-semibold hover-lift shadow-lg flex items-center justify-center gap-2"
                                >
                                    <i class="fas fa-save"></i>
                                    Save Changes
                                </button>
                                <a 
                                    href="/profile" 
                                    class="flex-1 bg-gray-200 text-gray-700 py-3 px-6 rounded-xl font-semibold hover:bg-gray-300 transition flex items-center justify-center gap-2"
                                >
                                    <i class="fas fa-times"></i>
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Help Card -->
                <div class="glass-effect rounded-2xl shadow-xl border border-white/20 p-6 mt-6">
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-lightbulb text-blue-600 text-xl"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold mb-2 text-gray-800">Username Guidelines</h3>
                            <ul class="space-y-2 text-sm text-gray-600">
                                <li class="flex items-start gap-2">
                                    <i class="fas fa-check text-green-500 mt-0.5"></i>
                                    <span>Choose a name that represents you</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <i class="fas fa-check text-green-500 mt-0.5"></i>
                                    <span>Keep it between 2 and 25 characters</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <i class="fas fa-check text-green-500 mt-0.5"></i>
                                    <span>Use only letters</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <i class="fas fa-check text-green-500 mt-0.5"></i>
                                    <span>Avoid offensive or inappropriate language</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Mobile menu toggle
        const menuButton = document.getElementById('mobileMenuButton');
        const mobileMenu = document.getElementById('mobileMenu');

        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Character counter and progress bar
        const usernameInput = document.getElementById('newUsername');
        const charCount = document.getElementById('charCount');
        const charProgress = document.getElementById('charProgress');
        const validationMessage = document.getElementById('validationMessage');

        function updateCharCounter() {
            const length = usernameInput.value.length;
            const maxLength = 25;
            const percentage = (length / maxLength) * 100;

            charCount.textContent = `${length} / ${maxLength}`;
            charProgress.style.width = `${percentage}%`;

            // Change color based on length
            if (length === 0) {
                charProgress.className = 'h-full bg-gray-300 transition-all duration-300';
            } else if (length < 2) {
                charProgress.className = 'h-full bg-red-500 transition-all duration-300';
            } else if (length > 40) {
                charProgress.className = 'h-full bg-yellow-500 transition-all duration-300';
            } else {
                charProgress.className = 'h-full bg-gradient-to-r from-gray-700 to-gray-900 transition-all duration-300';
            }
        }

        usernameInput.addEventListener('input', updateCharCounter);

        // Form validation
        const form = document.getElementById('editUsernameForm');
        const USERNAME_PATTERN = /^[A-Za-z]+( [A-Za-z]+)*$/;
        form.addEventListener('submit', async (e) => {
            e.preventDefault()
            const username = usernameInput.value.trim();

            validationMessage.classList.add('hidden');

            if (username.length < 2) {
                e.preventDefault();
                showValidationMessage('Username must be at least 2 characters long', 'error');
                return;
            }

            if (username.length > 25) {
                e.preventDefault();
                showValidationMessage('Username cannot exceed 25 characters', 'error');
                return;
            }
            if(!USERNAME_PATTERN.test(username)){
                e.preventDefault();
                showValidationMessage('Username can contain only characters', 'error');
                return;
            }
            const currentName = '<%= name %>';
            if (username === currentName) {
                e.preventDefault();
                showValidationMessage('New username is the same as current username', 'warning');
                return;
            }

            showValidationMessage('Updating username...', 'success');

            try{
                
                
                const request = await fetch('/profile/change-username',{
                    method:"POST",
                    headers:{
                        "Content-Type":"application/json"
                    },
                    body:JSON.stringify({username})
                })

                const result = await request.json()
                if(!result.success){
                    return Swal.fire({
                            toast: true,
                            icon: 'error',
                            title: result.message,
                            position: 'top-right',
                            showConfirmButton: false,
                            timer: 3000
                        });
                }
                window.location.href = result.redirect
                
            }catch(e){
                console.log("Front-end-error :\n",e)
                Swal.fire({
                    toast: true,
                    icon: "error",
                    title: e || "Something went wrong",
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000,
                });
            }

        });

        function showValidationMessage(message, type) {
            validationMessage.classList.remove('hidden');
            
            if (type === 'error') {
                validationMessage.className = 'mb-6 p-4 rounded-xl bg-red-50 border border-red-200 text-red-700 flex items-center gap-2';
                validationMessage.innerHTML = `<i class="fas fa-exclamation-circle"></i><span>${message}</span>`;
            } else if (type === 'warning') {
                validationMessage.className = 'mb-6 p-4 rounded-xl bg-yellow-50 border border-yellow-200 text-yellow-700 flex items-center gap-2';
                validationMessage.innerHTML = `<i class="fas fa-exclamation-triangle"></i><span>${message}</span>`;
            } else if (type === 'success') {
                validationMessage.className = 'mb-6 p-4 rounded-xl bg-green-50 border border-green-200 text-green-700 flex items-center gap-2';
                validationMessage.innerHTML = `<i class="fas fa-check-circle"></i><span>${message}</span>`;
            }
        }

        // Initialize character counter on page load
        updateCharCounter();
    </script>
</body>
</html>