<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>OTP Verification</title>
   <link rel="stylesheet" href="/css/output.css">
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
 
   <link rel="preload" href="/BLOVERLY.woff2" as="font" type="font/woff2" crossorigin>
<link rel="preload" href="/ClashDisplay-Regular.woff" as="font" type="font/woff" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet" />
  <style>
    @font-face {
            font-family: bloverly;
            src: url('../public/BLOVERLY.woff2')format('woff2');
    }
    @font-face {
        font-family: Clash-display;
        src: url('../public/ClashDisplay-Regular.woff')format('woff');
    }
    .otp-input {
      width: 50px;
      height: 50px;
      text-align: center;
      font-size: 24px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #e5e5e5;
    }
    
    @media (max-width: 640px) {
      .otp-input {
        width: 40px;
        height: 40px;
        font-size: 20px;
      }
    }
  </style>
</head>
<body class="bg-white flex flex-col items-center justify-center min-h-screen p-4">
  <% if (error) { %>
    <script>
      Swal.fire({
            toast: true,
            icon: 'error',
            title: '<%=error%>',
            position: 'top-right',
            showConfirmButton: false,
            timer: 3000
        });
    </script>
  <% } %>
  <% if (success) { %>
    <script>
      Swal.fire({
            toast: true,
            icon: 'success',
            title: '<%=success%>',
            position: 'top-right',
            showConfirmButton: false,
            timer: 3000
        });
    </script>
  <% } %>

  <div class="w-full max-w-md mx-auto">

    <!-- Header -->
    <h1 class="text-3xl md:text-4xl font-light text-center mb-6 font-playfair" style="font-family: 'bloverly', serif;">
      Otp verification
    </h1>

    <!-- Instructions -->
    <p class="text-center text-sm md:text-base mb-6">
      Please enter the 6-digit otp sent to<br>
      <span class="font-medium"> <%= email %> </span>
    </p>

    <!-- FORM STARTS HERE -->
    <form action="/verify-otp" method="POST" id="otpForm">

      <!-- OTP Input Fields -->
      <div class="flex justify-center gap-3 mb-6">
        <input type="text" maxlength="1" class="otp-input" name="otp1" id="otp1" oninput="moveToNext(1)" />
        <input type="text" maxlength="1" class="otp-input" name="otp2" id="otp2" oninput="moveToNext(2)" />
        <input type="text" maxlength="1" class="otp-input" name="otp3" id="otp3" oninput="moveToNext(3)" />
        <input type="text" maxlength="1" class="otp-input" name="otp4" id="otp4" oninput="moveToNext(4)" />
        <input type="text" maxlength="1" class="otp-input" name="otp5" id="otp5" oninput="moveToNext(5)" />
        <input type="text" maxlength="1" class="otp-input" name="otp6" id="otp6" oninput="moveToNext(6)" />
      </div>

      <!-- Timer -->
      <p class="text-center text-sm mb-6">
        Code expires in <span id="timer"></span>
      </p>

      <!-- Submit Button -->
      <button type="submit" class="w-full py-3 bg-black text-white font-medium tracking-wide hover:bg-gray-800 transition-colors mb-6">
        Verify Code
      </button>

    </form>
    <input type="hidden" name="email" value="<%= email %>">

    <!-- FORM ENDS HERE -->

    <!-- Resend Link -->
    <!-- <p class="text-center text-sm">
      Did not receive otp? <a href="#" class="underline">Resent otp</a>
    </p> -->
    <form action="/resent-otp" method="POST" class="text-center hidden" id="resendForm">
      <p class="text-sm inline">Did not receive otp? </p>
      <button type="submit" id="resendBtn" class="underline text-black text-sm hover:text-gray-700">
        Resend OTP
      </button>
    </form>



  </div>

 
<script>
  const otpForm = document.getElementById("otpForm");

  otpForm.addEventListener("submit", async function (e) {
    e.preventDefault(); 

    let otp = "";
    for (let i = 1; i <= 6; i++) {
      otp += document.getElementById(`otp${i}`).value;
    }

    if (otp.length !== 6) {
      Swal.fire({
        toast: true,
        icon: "error",
        title: "Please enter valid OTP",
        position: "top-right",
        showConfirmButton: false,
        timer: 3000,
      });
      return;
    }

    try {
      const res = await fetch("/verify-otp", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          otp: otp,
          email: "<%= email %>",
        }),
      });

      const data = await res.json();

      if (data.success) {
        Swal.fire({
          icon: "success",
          title: "OTP Verified",
          text: "Redirecting...",
          timer: 2000,
          showConfirmButton: false,
        });

        setTimeout(() => {
          window.location.href = data.redirect; 
        }, 2000);
      } else {
        Swal.fire({
          toast: true,
          icon: "error",
          title: data.message || "Invalid OTP",
          position: "top-right",
          showConfirmButton: false,
          timer: 3000,
        });
      }
    } catch (err) {
      console.error(err);
    }
  });

  
    let timeLeft = 25;
    const timerElement = document.getElementById("timer");
    const resendForm = document.getElementById("resendForm");
    const timerInterval = setInterval(() => {
      if (timeLeft <= 0) {
        clearInterval(timerInterval);
        timerElement.textContent = "Expired";
        timerElement.classList.add("text-red-500");
        resendForm.classList.remove("hidden");
        return;
      }

      const minutes = Math.floor(timeLeft / 60);
      const seconds = timeLeft % 60;

      timerElement.textContent = `${minutes}:${seconds
        .toString()
        .padStart(2, "0")}`;

      timeLeft--;
    }, 1000);
  function moveToNext(index) {
    const input = document.getElementById(`otp${index}`);
    
    input.value = input.value.replace(/[^0-9]/g, "");

    if (input.value && index < 6) {
      document.getElementById(`otp${index + 1}`).focus();
    }
  }
</script>

</body>
</html>