<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZZRH - Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 px-6 py-4">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <h1 class="text-3xl font-light tracking-wider">#ZZRH</h1>
            <div class="flex items-center gap-3">
                <button class="p-3 bg-gray-200 rounded-full hover:bg-gray-300 transition">
                    <i class="fas fa-search text-gray-700"></i>
                </button>
                <button class="p-3 bg-gray-200 rounded-full hover:bg-gray-300 transition">
                    <i class="fas fa-shopping-cart text-gray-700"></i>
                </button>
                <button class="p-3 bg-gray-200 rounded-full hover:bg-gray-300 transition">
                    <i class="fas fa-heart text-gray-700"></i>
                </button>
                <button class="p-3 bg-gray-200 rounded-full hover:bg-gray-300 transition">
                    <i class="fas fa-user text-gray-700"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-6 py-8">
        <div class="flex gap-8">
            <!-- Sidebar -->
            <aside class="w-64 flex-shrink-0">
                <h2 class="text-xl font-semibold mb-6">My Account</h2>
                <nav class="space-y-2">
                    <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-red-50 text-red-600">
                        <i class="fas fa-user"></i>
                        <span>Account Overview</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                        <i class="fas fa-shopping-bag"></i>
                        <span>My Orders</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                        <i class="fas fa-home"></i>
                        <span>Manage Address</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                        <i class="fas fa-wallet"></i>
                        <span>Wallet</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                        <i class="fas fa-lock"></i>
                        <span>Manage Password</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                        <i class="fas fa-heart"></i>
                        <span>Wishlist</span>
                    </a>
                </nav>
            </aside>

            <!-- Profile Content -->
            <main class="flex-1">
                <div class="bg-white rounded-lg shadow-sm">
                    <!-- Profile Header -->
                    <div class="px-8 py-6 border-b border-gray-200 flex items-center justify-between">
                        <h2 class="text-3xl font-semibold">Profile</h2>
                        <div class="relative">
                            <div class="w-16 h-16 bg-gradient-to-br from-orange-200 to-orange-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-2xl text-orange-400"></i>
                            </div>
                            <button class="absolute bottom-0 right-0 w-6 h-6 bg-black rounded-full flex items-center justify-center">
                                <i class="fas fa-pen text-white text-xs"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Profile Fields -->
                    <div class="px-8 py-6 space-y-6">
                        <!-- User Name -->
                        <div class="border-b border-gray-200 pb-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500 mb-1">User Name</p>
                                    <p class="text-lg font-medium text-gray-900">Jane Doe</p>
                                </div>
                                <button class="text-red-600 font-medium hover:text-red-700 transition">
                                    Edit
                                </button>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="border-b border-gray-200 pb-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500 mb-1">Email</p>
                                    <p class="text-lg font-medium text-gray-900">jane.doe@example.com</p>
                                </div>
                                <button class="text-red-600 font-medium hover:text-red-700 transition">
                                    Edit
                                </button>
                            </div>
                        </div>

                        <!-- Mobile Number -->
                        <div class="pb-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500 mb-1">Mobile Number</p>
                                    <p class="text-lg font-medium text-gray-900">+1 234 567 8900</p>
                                </div>
                                <button class="text-red-600 font-medium hover:text-red-700 transition">
                                    Edit
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Footer User Info -->
    <div class="fixed bottom-6 left-6">
        <div class="bg-white rounded-lg shadow-lg px-4 py-3 flex items-center gap-3">
            <div class="w-12 h-12 bg-gradient-to-br from-orange-200 to-orange-100 rounded-full flex items-center justify-center">
                <i class="fas fa-user text-orange-400"></i>
            </div>
            <div>
                <p class="font-medium text-gray-900">Samantha Jones</p>
                <p class="text-sm text-gray-500">samantha.j@example.com</p>
            </div>
        </div>
    </div>
</body>
</html>