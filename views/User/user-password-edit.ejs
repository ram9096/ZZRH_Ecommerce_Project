    <script>
        // Mobile menu toggle
        const menuButton = document.getElementById('mobileMenuButton');
        const mobileMenu = document.getElementById('mobileMenu');

        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        function setupToggle(toggleId, inputId) {
            const toggleBtn = document.getElementById(toggleId);
            const input = document.getElementById(inputId);
            let isHidden = true;

            toggleBtn.addEventListener('click', () => {
                if (isHidden) {
                    input.type = 'text';
                    toggleBtn.innerHTML = '<i class="fas fa-eye-slash"></i>';
                } else {
                    input.type = 'password';
                    toggleBtn.innerHTML = '<i class="fas fa-eye"></i>';
                }
                isHidden = !isHidden;
            });
        }


        

        // Character counter and progress bar
        const usernameInput = document.getElementById('password');
        const charCount = document.getElementById('charCount');
        const charProgress = document.getElementById('charProgress');
        const validationMessage = document.getElementById('validationMessage');

        function updateCharCounter() {
            const length = usernameInput.value.length;
            const maxLength = 6;
            const percentage = (length / maxLength) * 100;

            // charCount.textContent = `${length} / ${maxLength}`;
            // charProgress.style.width = `${percentage}%`;

            // // Change color based on length
            // if (length === 0) {
            //     charProgress.className = 'h-full bg-gray-300 transition-all duration-300';
            // } else if (length < 6) {
            //     charProgress.className = 'h-full bg-red-500 transition-all duration-300';
            // } else if (length > 40) {
            //     charProgress.className = 'h-full bg-yellow-500 transition-all duration-300';
            // } else {
            //     charProgress.className = 'h-full bg-gradient-to-r from-gray-700 to-gray-900 transition-all duration-300';
            // }
        }

        //usernameInput.addEventListener('input', updateCharCounter);

        // Form validation
        const verificationForm = document.getElementById('editPassword');
        const newPasswordForm = document.getElementById('editNewPassword')
        if(verificationForm){
            verificationForm.addEventListener('submit', async (e) => {
                e.preventDefault()
                const password = usernameInput.value.trim();

                validationMessage.classList.add('hidden');

                showValidationMessage('Updating password ...', 'success');

                try{
                            
                    const request = await fetch('/profile/change-password',{
                        method:"POST",
                        headers:{
                            "Content-Type":"application/json"
                        },
                        body:JSON.stringify({password})
                    })

                    const result = await request.json()

                    if(!result.success){
                        return Swal.fire({
                            toast: true,
                            icon: 'error',
                            title: result.message,
                            position: 'top-right',
                            showConfirmButton: false,
                            timer: 3000
                        });
                    }
                    window.location.href = result.redirect
                    
                }catch(e){
                    console.log("Front-end-error :\n",e)
                }

            });
        }

        if(newPasswordForm){
            newPasswordForm.addEventListener('submit', async (e) => {
                e.preventDefault()
                
                validationMessage.classList.add('hidden');
                

                const password = document.getElementById('newPassword').value
                const confirm_password = document.getElementById('Confirmpassword').value

                if(/(.)\1{2,}/.test(password)){
                    e.preventDefault()
                    showValidationMessage('Same characters cannot be repeted more than 2 times','error')
                    return;
                }
                if(password.length<6){
                    e.preventDefault()
                    showValidationMessage('Minimum 6 characters','error')
                    return;
                }
                if(password === ''){
                    e.preventDefault()
                    showValidationMessage('Enter a password','error')
                    return;
                }
                if(password !== confirm_password){
                    e.preventDefault()
                    showValidationMessage('Password doesn\'t match','error')
                    return;
                }

                
                
                showValidationMessage('Checking password ...', 'success');

                try{
                    const request = await fetch('/profile/change-password',{
                        method:"POST",
                        headers:{
                            "Content-Type":"application/json"
                        },
                        body:JSON.stringify({password})
                    })
                    
                    console.log("result")        
                    
                    const result = await request.json()
                    if(!result.success){
                        Swal.fire({
                            toast: true,
                            icon: 'error',
                            title: result.message,
                            position: 'top-right',
                            showConfirmButton: false,
                            timer: 3000
                        });
                        return;
                    }
                    
                     window.location.href = result.redirect
                    
                }catch(e){
                    Swal.fire({
                        toast: true,
                        icon: "error",
                        title: e || "Something went wrong",
                        position: "top-right",
                        showConfirmButton: false,
                        timer: 3000,
                    });
                    console.log("Front-end-error :\n",e)
                }

            });


        }
        function showValidationMessage(message, type) {
            validationMessage.classList.remove('hidden');
            
            if (type === 'error') {
                validationMessage.className = 'mb-6 p-4 rounded-xl bg-red-50 border border-red-200 text-red-700 flex items-center gap-2';
                validationMessage.innerHTML = `<i class="fas fa-exclamation-circle"></i><span>${message}</span>`;
            } else if (type === 'warning') {
                validationMessage.className = 'mb-6 p-4 rounded-xl bg-yellow-50 border border-yellow-200 text-yellow-700 flex items-center gap-2';
                validationMessage.innerHTML = `<i class="fas fa-exclamation-triangle"></i><span>${message}</span>`;
            } else if (type === 'success') {
                validationMessage.className = 'mb-6 p-4 rounded-xl bg-green-50 border border-green-200 text-green-700 flex items-center gap-2';
                validationMessage.innerHTML = `<i class="fas fa-check-circle"></i><span>${message}</span>`;
            }
        }
        setupToggle('toggle-new', 'newPassword');
        setupToggle('toggle-confirm', 'Confirmpassword');
        
        //updateCharCounter();
    </script>
