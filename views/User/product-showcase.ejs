                </div>
            </aside>

            <!-- Products Grid -->
            <div class="flex-1">
                <!-- <h2 class="text-4xl serif-font font-light mb-8 font-bloverly">Popular Right Now</h2> -->
                <div id="productGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 ml-5">
                    <% product.forEach(product=>{ %>
                        <!-- Product Card -->
