    <script>

        const menuButton = document.getElementById('mobileMenuButton');
        const mobileMenu = document.getElementById('mobileMenu');
        function ProductsRendering(products) {
            const grid = document.getElementById("productGrid");
            grid.innerHTML = "";

            if (!products || products.length === 0) {
                grid.innerHTML = `<p class="text-gray-500">No products found</p>`;
                return;
            }
            
            products.forEach(product => {
                grid.insertAdjacentHTML("beforeend", `
                    <a href="/home/product-details/${product._id}?size=${product.size}&color=${product.color}">
                        <div class="max-w-sm">
                            <div class="bg-white rounded-lg overflow-hidden shadow-sm">
                                <div class="bg-gray-100 aspect-[3/4] flex items-center justify-center">
                                    <img 
                                        src="${product.image[0]}" 
                                        alt="${product.products.name}" 
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                                <div class="p-6 text-center">
                                    <h3 class="text-base font-normal text-gray-900 mb-1">
                                        ${product.products.name}
                                    </h3>
                                    <p class="text-base text-gray-900">₹${product.price}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                `);
            });
        }

        document.getElementById('filter').addEventListener('click',async ()=>{
            const category = document.querySelector('input[name="category"]:checked')?.value
            const minPrice = document.getElementById('minPrice').value
            const maxPrice = document.getElementById('maxPrice').value
            const size = document.getElementById('size').value||null

            const color = document.getElementById('color').value||null
            console.log("Reached here" ,category,minPrice,maxPrice,size,color)
            try{
                const res = await fetch('/products/filter',{
                    method:"POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body:JSON.stringify({
                        category,
                        minPrice,
                        maxPrice,
                        size,
                        color
                    })
                })
                const data  = await res.json()
                if(!data.success){
                    Swal.fire({
                        toast: true,
                        icon: "error",
                        title: data.message || "ERROR",
                        position: "top-right",
                        showConfirmButton: false,
                        timer: 3000,
                    })
                    return 
                }
                ProductsRendering(data.product)

            }catch(e){
                console.log("Server error ")
                 Swal.fire({
                    toast: true,
                    icon: "error",
                    title: e.message,
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000,
                });
            }

        })

      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    </script>
