    <!-- Popular Right Now Section with Filter -->
    <section class="container mx-auto px-4 p">
        <div class="flex flex-col lg:flex-row gap-5">
            <!-- Filter Sidebar -->
            <aside class="lg:w-64 flex-shrink-0">
                <div class="bg-white rounded-lg border border-gray-200 p-6 sticky top-4">
                    <!-- Filter Header -->
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-xl font-clash font-medium">Filter</h3>
                        <a href="/products">
                            <button id="resetFilters" class="text-sm text-gray-600 hover:text-black">Reset filters</button>
                        </a>
                    </div>

                    <!-- Category Filter -->
                    <div class="mb-6 pb-6 border-b border-gray-200">
                        <h4 class="font-medium mb-3 font-clash text-sm">Category</h4>
                        <div class="space-y-2">
                            <% category.forEach(c=>{ %>
                                <label class="flex items-center cursor-pointer">
                                    <input type="radio" name="category" value="<%= c.categoryName %>" class="mr-2">
                                    <span class="text-sm"><%= c.categoryName %></span>
                                </label>
                            <% }) %>
                            
                        </div>
                    </div>

                    <!-- Price Range Filter -->
                    <div class="mb-6 pb-6 border-b border-gray-200">
                        <h4 class="font-medium mb-3 font-clash text-sm">Price range</h4>
                        <div class="space-y-3">
                            <div class="flex gap-2">
                                <input type="number" placeholder="Min" class="w-full border border-gray-300 rounded px-3 py-2 text-sm" id="minPrice">
                                <input type="number" placeholder="Max" class="w-full border border-gray-300 rounded px-3 py-2 text-sm" id="maxPrice">
                            </div>
                            
                        </div>
                    </div>

                    <!-- Size Filter -->
                    <div class="mb-6 pb-6 border-b border-gray-200">
                        <h4 class="font-medium mb-3 font-clash text-sm">Size</h4>
                        <div class="grid grid-cols-3 gap-2">
                            <select name="size"  id="size">
                                <option value="XS" class="size-btn border border-gray-300 rounded px-3 py-2 text-sm hover:bg-black hover:text-white transition">XS</option>
                                <option value="Small" class="size-btn border border-gray-300 rounded px-3 py-2 text-sm hover:bg-black hover:text-white transition">S</option>
                                <option value="Medium" class="size-btn border border-gray-300 rounded px-3 py-2 text-sm hover:bg-black hover:text-white transition">M</option>
                                <option value="L" class="size-btn border border-gray-300 rounded px-3 py-2 text-sm hover:bg-black hover:text-white transition">L</option>
                                <option value="XL" class="size-btn border border-gray-300 rounded px-3 py-2 text-sm hover:bg-black hover:text-white transition">XL</option>
                                <option value="XXL" class="size-btn border border-gray-300 rounded px-3 py-2 text-sm hover:bg-black hover:text-white transition">XXL</option>
                            </select>
                        </div>
                    </div>

                    <!-- Color Filter -->
                    <div class="mb-6">
                        <h4 class="font-medium mb-3 font-clash text-sm">Color</h4>
                        <div class="grid grid-cols-2 gap-2">
                            <select name="color" id="color">
                                <% color.forEach(c=>{ %>
                                    <option class="color-btn w-8 h-8 rounded-full border-2 border-gray-300 " value="<%= c %>" ><%= c %></option>
                                <% }) %>
                            </select>
                            
                        </div>
                    </div>

                    <!-- Apply Filters Button -->
                    <button id="filter" class="w-full bg-black text-white py-3 rounded-md font-clash text-sm hover:bg-gray-800 transition">
                        Show Results
