                                        <h3 class="text-base font-normal text-gray-900 mb-1"><%= product.products.name %></h3>
                                        <p class="text-base text-gray-900">₹<%= product.price %></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    <% }) %>
