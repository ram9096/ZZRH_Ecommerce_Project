    <!-- Add Address Modal -->
    <div id="addAddressModal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
        <div class="modal-overlay absolute inset-0" onclick="closeAddressModal()"></div>
        
        <div class="relative bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <!-- Modal Header -->
            <div class="gradient-bg px-8 py-6 sticky top-0 z-10">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-2xl font-bold text-white">Add New Address</h3>
                        <p class="text-gray-300 text-sm mt-1">Fill in the details below</p>
                    </div>
                    <button onclick="closeAddressModal()" class="w-10 h-10 rounded-full bg-white/20 hover:bg-white/30 flex items-center justify-center transition">
                        <i class="fas fa-times text-white"></i>
                    </button>
                </div>
            </div>

            <!-- Modal Form -->
            <div class="p-8">
                <form action="/profile/address-management" id="Address_Form" class="space-y-6">
                    <!-- Full Name -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
                        <input type="text" id="username" name="username" required 
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                            placeholder="Enter your full name">
                        <span id="name-error" class="text-xs text-red-500"></span>
                        
                    </div>

                    <!-- Phone Number -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Phone Number</label>
                        <input type="tel" id="phone" name="phone" required 
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                            placeholder="Enter phone number">
          <span id="number-error" class="text-xs text-red-500"></span>

                    </div>

                    <!-- Street Address -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Street Address</label>
                        <input type="text" id="street" name="street" required 
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                            placeholder="House number and street name">
          <span id="street-error" class="text-xs text-red-500"></span>
                        
                    </div>

                    <!-- Landmark -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Landmark (Optional)</label>
                        <input type="text" name="landmark"  id="landmark"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                            placeholder="Nearby landmark">
          <span id="landmark-error" class="text-xs text-red-500"></span>
                        
                    </div>
                    <!-- Postal Code and Country -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Postal Code</label>
                            <input type="text" name="postalCode" required  id="postalCode"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                                placeholder="Postal code" >
          <span id="postal-error" class="text-xs text-red-500"></span>
                            
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Country</label>
                            <input type="text" name="country" required id="country"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                                placeholder="Country" >
          <span id="country-error" class="text-xs text-red-500"></span>
                            
                        </div>
                    </div>
                    <!-- City and State -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">City</label>
                            <input type="text" name="city" required  id="city"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                                placeholder="City" >
          <span id="city-error" class="text-xs text-red-500"></span>

                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">State</label>
                            <input type="text" name="state" required id="state"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                                placeholder="State" >
          <span id="state-error" class="text-xs text-red-500"></span>

                        </div>
                    </div>

                    

                    <!-- Address Type -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-3">Address Type</label>
                        <div class="flex gap-4">
                            <label class="flex items-center cursor-pointer">
                                <input type="radio" name="addressType" value="home" checked class="w-4 h-4 text-blue-600">
                                <span class="ml-2 text-gray-700">Home</span>
                            </label>
                            <label class="flex items-center cursor-pointer">
                                <input type="radio" name="addressType" value="work" class="w-4 h-4 text-blue-600">
                                <span class="ml-2 text-gray-700">Work</span>
                            </label>
                            <label class="flex items-center cursor-pointer">
                                <input type="radio" name="addressType" value="other" class="w-4 h-4 text-blue-600">
                                <span class="ml-2 text-gray-700">Other</span>
                            </label>
                        </div>
                    </div>

                    <!-- Set as Primary -->
                    <div class="flex items-center">
                        <input type="checkbox" name="isPrimary" id="isPrimary" class="w-4 h-4 text-blue-600 rounded">
                        <label for="isPrimary" class="ml-2 text-sm text-gray-700 cursor-pointer">Set as primary address</label>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex gap-4 pt-4">
                        <button type="submit" 
                            class="flex-1 gradient-bg text-white py-3 rounded-lg font-semibold hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                            <i class="fas fa-save mr-2"></i>Save Address
                        </button>
                        <button type="button" onclick="closeAddressModal()" 
                            class="px-8 py-3 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
