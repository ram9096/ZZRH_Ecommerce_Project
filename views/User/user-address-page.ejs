<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZZRH - Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
        }
        .glass-effect {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #1f2937 0%, #000000 100%);
        }
        .hover-lift {
            transition: all 0.3s ease;
        }
        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }
        .profile-avatar {
            background: linear-gradient(135deg, #6b7280 0%, #1f2937 100%);
        }
        .modal-overlay {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
        }
    </style>
</head>
<body class="bg-linear-to-br from-gray-50 via-gray-100 to-gray-50 min-h-screen">
    <!-- Header -->
     <%- include('../Partials/nav-bar') %>

    <!-- Add Address Modal -->
    <div id="addAddressModal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
        <div class="modal-overlay absolute inset-0" onclick="closeAddressModal()"></div>
        
        <div class="relative bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <!-- Modal Header -->
            <div class="gradient-bg px-8 py-6 sticky top-0 z-10">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-2xl font-bold text-white">Add New Address</h3>
                        <p class="text-gray-300 text-sm mt-1">Fill in the details below</p>
                    </div>
                    <button onclick="closeAddressModal()" class="w-10 h-10 rounded-full bg-white/20 hover:bg-white/30 flex items-center justify-center transition">
                        <i class="fas fa-times text-white"></i>
                    </button>
                </div>
            </div>

            <!-- Modal Form -->
            <div class="p-8">
                <form  id="Address_Form" class="space-y-6">
                    <!-- Full Name -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
                        <input type="text" id="username" name="username" required 
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                            placeholder="Enter your full name">
                        <span id="name-error" class="text-xs text-red-500"></span>
                        
                    </div>

                    <!-- Phone Number -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Phone Number</label>
                        <input type="tel" id="phone" name="phone" required 
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                            placeholder="Enter phone number">
          <span id="number-error" class="text-xs text-red-500"></span>

                    </div>

                    <!-- Street Address -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Street Address</label>
                        <input type="text" id="street" name="street" required 
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                            placeholder="House number and street name">
          <span id="street-error" class="text-xs text-red-500"></span>
                        
                    </div>

                    <!-- Landmark -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Landmark (Optional)</label>
                        <input type="text" name="landmark"  id="landmark"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                            placeholder="Nearby landmark">
          <span id="landmark-error" class="text-xs text-red-500"></span>
                        
                    </div>
                    <!-- Postal Code and Country -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Postal Code</label>
                            <input type="text" name="postalCode" required  id="postalCode"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                                placeholder="Postal code" >
          <span id="postal-error" class="text-xs text-red-500"></span>
                            
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Country</label>
                            <input type="text" name="country" required id="country"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                                placeholder="Country" >
          <span id="country-error" class="text-xs text-red-500"></span>
                            
                        </div>
                    </div>
                    <!-- City and State -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">District</label>
                            <input type="text" name="city" required  id="city"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                                placeholder="District" >
          <span id="city-error" class="text-xs text-red-500"></span>

                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">State</label>
                            <input type="text" name="state" required id="state"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition"
                                placeholder="State" >
          <span id="state-error" class="text-xs text-red-500"></span>

                        </div>
                    </div>

                    

                   

                    <!-- Set as Primary -->
                    <div class="flex items-center">
                        <input type="checkbox" name="isPrimary" id="isPrimary" class="w-4 h-4 text-blue-600 rounded">
                        <label for="isPrimary" class="ml-2 text-sm text-gray-700 cursor-pointer">Set as primary address</label>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex gap-4 pt-4">
                        <button type="submit" 
                            class="flex-1 gradient-bg text-white py-3 rounded-lg font-semibold hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                            <i class="fas fa-save mr-2"></i>Save Address
                        </button>
                        <button type="button" onclick="closeAddressModal()" 
                            class="px-8 py-3 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    
    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-6 py-8">
        <div class="flex gap-8">
            <!-- Sidebar -->
            <%- include('../Partials/user-sidebar') %>

            <!-- Profile Content -->
            <main class="flex-1">
                <div class="glass-effect rounded-2xl shadow-xl border border-white/20 overflow-hidden">
                    <!-- Profile Header -->
                    <div class="gradient-bg px-8 py-8 relative overflow-hidden">
                        <div class="absolute inset-0 opacity-10">
                            <div class="absolute top-0 right-0 w-64 h-64 bg-white rounded-full -translate-y-32 translate-x-32"></div>
                            <div class="absolute bottom-0 left-0 w-48 h-48 bg-white rounded-full translate-y-24 -translate-x-24"></div>
                        </div>
                        <div class="relative flex items-center justify-between">
                            <div>
                                <h2 class="text-3xl font-bold text-white mb-2">Address</h2>
                                <p class="text-gray-300">Manage your address details</p>
                            </div>
                            
                            <button onclick="openAddressModal()" style="cursor: pointer;" class="px-6 py-2.5 bg-gradient-to-r bg-white text-black rounded-xl  font-semibold text-sm shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                                <i class="fas fa-plus mr-2"></i>Add
                            </button>
                        </div>
                    </div>
                    
                    <!-- Profile Fields -->
                    
                    <% address.forEach(ad=>{ %>
                        <div class="px-8 py-8 space-y-6">
                            <!-- Address -->
                            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-100 shadow-sm hover:shadow-md transition-shadow">
                                <div class="flex items-start justify-between">
                                    <div class="flex gap-4">
                                        <div class="w-14 h-14 gradient-bg rounded-2xl flex items-center justify-center shadow-lg">
                                            <i class="fas fa-map-marker-alt text-white text-xl"></i>
                                        </div>
                                        <div class="flex-1">
                                            <div class="flex items-center gap-2 mb-2">
                                                <p class="text-xs font-bold text-blue-600 uppercase tracking-widest"><%= ad.username %> Address</p>
                                                <span class="px-2 py-0.5 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full">Use this</span>
                                            </div>
                                            <p class="text-base text-gray-700 leading-relaxed max-w-md"><%= ad.street_address %></p>
                                            <p class="mt-6  font-bold text-gray-700 leading-relaxed max-w-md"><%= ad.country %> , <%= ad.state %> , <%= ad.city %></p>
                                        </div>
                                    </div>
                                    <div class="flex gap-2">
                                        <a href="/profile/change-address">
                                            <button class="cursor-pointer px-6 py-2.5 gradient-bg text-white rounded-xl hover:from-blue-700 hover:to-indigo-700 font-semibold text-sm shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                                                <i class="fas fa-edit mr-2"></i>Edit
                                            </button>
                                        </a>
                                       <button
                                            type="button"
                                            onclick="deleteAddress('<%= ad.id %>')"
                                            class="cursor-pointer px-6 py-2.5 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl hover:from-red-600 hover:to-red-700 font-semibold text-sm shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                                            <i class="fas fa-trash-alt mr-2"></i>Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>


                </div>
            </main>
        </div>
    </div>

    <script>
    
        const menuButton = document.getElementById('mobileMenuButton');
        const mobileMenu = document.getElementById('mobileMenu');
        const addressForm = document.getElementById('Address_Form')

        let pincode_details = null
        let name = document.getElementById('username')
        let phone = document.getElementById('phone')
        let street = document.getElementById('street')
        let landmark = document.getElementById('landmark')
        let city = document.getElementById('city')
        let state = document.getElementById('state')
        let code = document.getElementById('postalCode')
        let country = document.getElementById('country')
        let isDefault  = document.getElementById('isPrimary')

        const errors = {
            name:document.getElementById('name-error'),
            phone:document.getElementById('number-error'),
            street:document.getElementById('street-error'),
            landmark:document.getElementById('landmark-error'),
            city:document.getElementById('city-error'),
            state:document.getElementById('state-error'),
            code:document.getElementById('postal-error'),
            country:document.getElementById('country-error')
        }


        const pincodeField = document.getElementById("postalCode");

        let pincodeTimeout;

        pincodeField.addEventListener("input", () => {
        clearTimeout(pincodeTimeout);

        const pincode = pincodeField.value.trim();

    
        if (!/^\d{6}$/.test(pincode)) return;

       
        pincodeTimeout = setTimeout(() => {
            autofillFromPincode(pincode);
        }, 400);
        });

        async function autofillFromPincode(pincode) {
            try {
                const response = await fetch(
                `https://api.postalpincode.in/pincode/${pincode}`
                );
                const data = await response.json();

                if (data[0].Status !== "Success") return;

                const po = data[0].PostOffice[0];

                pincode_details = data[0].PostOffice
                
                fields.city.value = po.District;
                fields.state.value = po.State;

            
                if (!fields.country.value) {
                fields.country.value = "India";
                }

            } catch (err) {
                
                console.warn("Pincode lookup failed: ",err);
            }
        }

        function clearErrors() {
        Object.values(errors).forEach(err => err.textContent = "");
        }

        function isEmpty(value) {
        return value.trim() === "";
        }

        function isValidPhone(phone) {
        return /^[6-9]\d{9}$/.test(phone); 
        }

        function isValidPincode(code) {
        return /^\d{6}$/.test(code); // 
        }


        const rules = {
            name: {
                required: true,
                min: 2,
                message: "Enter a valid full name"
            },
            street: {
                required: true,
                min: 3,
                message: "Enter a valid address"
            },
            city: {
                required: true,
                min: 2,
                message: "Enter a valid city"
            },
            state: {
                required: true,
                min: 2,
                message: "Enter a valid state"
            },
            country: {
                required: true,
                min: 2,
                message: "Enter a valid country"
            },
            code: {
                required: true,
                pattern: /^\d{6}$/,
                message: "Enter a valid 6-digit pincode"
            },
            phone: {
                required: true,
                pattern: /^[6-9]\d{9}$/,
                message: "Enter a valid mobile number"
            }
        };

        function validateFields(rules) {
            for (let key in rules) {
                const input = document.getElementById(key);
                if (!input) continue;

                const value = input.value.trim();
                const rule = rules[key];

                
                if (rule.required && value === "") {
                    return { valid: false, field: key, message: rule.message };
                }

                if (rule.min && value.length < rule.min) {
                    return { valid: false, field: key, message: rule.message };
                }

                if (rule.pattern && !rule.pattern.test(value)) {
                    return { valid: false, field: key, message: rule.message };
                }
            }
            return { valid: true };
        }

        async function validatePincode(pincode, cityInput, stateInput) {
            try {
                const res = await fetch(`https://api.postalpincode.in/pincode/${pincode}`);
                const data = await res.json();
                console.log(data)
                if (data[0].Status !== "Success") {
                    return { valid: false, message: "Invalid pincode" };
                }

                const postOffice = data[0].PostOffice[0];

                const apiCity = postOffice.District.toLowerCase();
                const apiState = postOffice.State.toLowerCase();
                console.log(apiCity)
                if (
                    !stateInput.toLowerCase().includes(apiState) &&
                    !apiState.includes(stateInput.toLowerCase())
                ) {
                    return { valid: false, message: "State does not match pincode" };
                }


                if (
                    !cityInput.toLowerCase().includes(apiCity) &&
                    !apiCity.includes(cityInput.toLowerCase())
                ) {
                    return { valid: false, message: "City does not match pincode" };
                }

            

                return {
                    valid: true,
                    city: postOffice.District,
                    state: postOffice.State
                };

            } catch (err) {
                return { valid: false, message: "Pincode validation failed" };
            }
        }

        async function deleteAddress(id) {
                const confirmation = await Swal.fire({
                    title: "Delete address?",
                    text: "This action cannot be undone.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#6b7280",
                    confirmButtonText: "Yes, delete",
                    cancelButtonText: "Cancel",
                    reverseButtons: true
                });

                // User clicked cancel
                if (!confirmation.isConfirmed) return;
            try{
                const request = await fetch(`/profile/delete-address/${id}`,{
                    method:"POST",
                    headers:{
                        "Content-Type":"application/json"
                    }
                })
                const result = await request.json()
                if (!result.success) {
                    Swal.fire({
                        toast: true,
                        icon: "error",
                        title: result.message || "Something went wrong",
                        position: "top-right",
                        showConfirmButton: false,
                        timer: 3000,
                    });
                    return;
                }
                Swal.fire({
                    toast:true,
                    icon: "success",
                    title: "Address deleted",
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000,
                });

                setTimeout(() => {
                    window.location.href = result.redirect || "/profile";
                }, 1500);

            }catch(e){
                Swal.fire({
                    toast: true,
                    icon: "error",
                    title: e.message,
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000,
                });
            }
        }

        addressForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            clearErrors();

            const check = validateFields(rules);

            if (!check.valid) {
                const field = document.getElementById(check.field);
                field.focus();
                field.classList.add("border-red-500");

                return Swal.fire({
                    toast: true,
                    icon: "error",
                    title: check.message,
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000
                });
            }
            const pinCheck = await validatePincode(
                code.value,
                city.value,
                state.value
            );
            if (!pinCheck.valid) {
                return Swal.fire({
                        toast: true,
                        icon: 'error',
                        title: pinCheck.message,
                        position: 'top-right',
                        showConfirmButton: false,
                        timer: 3000
                    });
            }
            
            city.value = pinCheck.city;
            state.value = pinCheck.state;
            

            try {
                const response = await fetch('/profile/address-management', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        id: '<%= isLogged.id %>',
                        username: name.value,
                        phone: phone.value,
                        street: street.value,
                        landmark: landmark.value,
                        city: city.value,
                        state: state.value,
                        country: country.value,
                        pincode: code.value,
                        isDefault: isDefault.checked
                    })
                });

                const result = await response.json();

                if (!result.success) {
                    Swal.fire({
                        toast: true,
                        icon: "error",
                        title: result.message || "Something went wrong",
                        position: "top-right",
                        showConfirmButton: false,
                        timer: 3000,
                    });
                    return;
                }

                Swal.fire({
                    icon: "success",
                    title: "Address added successfully",
                    timer: 1500,
                    showConfirmButton: false,
                });

                setTimeout(() => {
                    window.location.href = result.redirect || "/profile";
                }, 1500);

            } catch (err) {
                    Swal.fire({
                    toast: true,
                    icon: "error",
                    title: err.message,
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000,
                    });
                }
            });



        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Address Modal Functions
        function openAddressModal() {
            document.getElementById('addAddressModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeAddressModal() {
            document.getElementById('addAddressModal').classList.add('hidden');
            addressForm.reset();
            clearErrors()
            document.body.style.overflow = 'auto';
        }

        // Close modal on Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
            closeAddressModal();
            }
        });
    </script>
</body>
</html>