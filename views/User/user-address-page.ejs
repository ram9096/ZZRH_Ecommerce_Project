    <script>
    
        const menuButton = document.getElementById('mobileMenuButton');
        const mobileMenu = document.getElementById('mobileMenu');
        const addressForm = document.getElementById('Address_Form')
        let pincode_details = null
        const fields = {
            name:document.getElementById('username'),
            phone:document.getElementById('phone'),
            street:document.getElementById('street'),
            landmark:document.getElementById('landmark'),
            city:document.getElementById('city'),
            state:document.getElementById('state'),
            code:document.getElementById('postalCode'),
            country:document.getElementById('country'),
            isDefault :document.getElementById('isPrimary')
        }
        const errors = {
            name:document.getElementById('name-error'),
            phone:document.getElementById('number-error'),
            street:document.getElementById('street-error'),
            landmark:document.getElementById('landmark-error'),
            city:document.getElementById('city-error'),
            state:document.getElementById('state-error'),
            code:document.getElementById('postal-error'),
            country:document.getElementById('country-error')
        }


        const pincodeField = document.getElementById("postalCode");

        let pincodeTimeout;

        pincodeField.addEventListener("input", () => {
        clearTimeout(pincodeTimeout);

        const pincode = pincodeField.value.trim();

    
        if (!/^\d{6}$/.test(pincode)) return;

       
        pincodeTimeout = setTimeout(() => {
            autofillFromPincode(pincode);
        }, 400);
        });

        async function autofillFromPincode(pincode) {
            try {
                const response = await fetch(
                `https://api.postalpincode.in/pincode/${pincode}`
                );
                const data = await response.json();

                if (data[0].Status !== "Success") return;

                const po = data[0].PostOffice[0];

                pincode_details = data[0].PostOffice
                
                fields.city.value = po.District;
                fields.state.value = po.State;

            
                if (!fields.country.value) {
                fields.country.value = "India";
                }

            } catch (err) {
                
                console.warn("Pincode lookup failed: ",err);
            }
        }

        function clearErrors() {
        Object.values(errors).forEach(err => err.textContent = "");
        }

        function isEmpty(value) {
        return value.trim() === "";
        }

        function isValidPhone(phone) {
        return /^[6-9]\d{9}$/.test(phone); 
        }

        function isValidPincode(code) {
        return /^\d{6}$/.test(code); // 
        }


        async function deleteAddress(id) {
            try{
                const request = await fetch(`/profile/delete-address/${id}`,{
                    method:"POST",
                    headers:{
                        "Content-Type":"aaplication/json"
                    }
                })
                const result = await request.json()
                if (!result.success) {
                    Swal.fire({
                        toast: true,
                        icon: "error",
                        title: result.message || "Something went wrong",
                        position: "top-right",
                        showConfirmButton: false,
                        timer: 3000,
                    });
                    return;
                }
                Swal.fire({
                    toast:true,
                    icon: "success",
                    title: "Address deleted",
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000,
                });

                setTimeout(() => {
                    window.location.href = result.redirect || "/profile";
                }, 1500);

            }catch(e){
                Swal.fire({
                    toast: true,
                    icon: "error",
                    title: e.message,
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000,
                });
            }
        }

        addressForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            clearErrors();

            let isValid = true;

           if (!Array.isArray(pincode_details)) {
                errors.code.textContent = "Please enter a valid PIN code first";
                return;
            }

            

            if (isEmpty(fields.name.value)) {
                errors.name.textContent = "Name is required";
                isValid = false;
            } else if (!/^[A-Za-z]+( [A-Za-z]+)*$/.test(fields.name.value)) {
                errors.name.textContent = "Only alphabets allowed";
                isValid = false;
            }else if(fields.name.value>50){
                errors.name.textContent = "Name size exceeds"
                isValid = false;
            }


            if (isEmpty(fields.phone.value)) {
                errors.phone.textContent = "Phone number is required";
                isValid = false;
            } else if (!isValidPhone(fields.phone.value)) {
                errors.phone.textContent = "Enter a valid 10-digit mobile number";
                isValid = false;
            }else if(/^(\d)\1{9}$/.test(fields.phone.value)){
                errors.phone.textContent = "Same characters cannot be repeted more than 10 times"
                isValid =  false
            }
            else if (!/^[0-9]{10}$/.test(fields.phone.value)) {
                errors.phone.textContent = "Numbers only accepted && 10 digits"
                isValid =  false
            }

            if (isEmpty(fields.street.value)) {
                errors.street.textContent = "Street address is required";
                isValid = false;
            }

            if (fields.landmark.value.length > 200) {
                errors.landmark.textContent = "Landmark too long";
                isValid = false;
            }

            if (isEmpty(fields.city.value)) {
                errors.city.textContent = "City is required";
                isValid = false;
            }

            if (isEmpty(fields.state.value)) {
                errors.state.textContent = "State is required";
                isValid = false;
            }

            if (isEmpty(fields.code.value)) {
                errors.code.textContent = "Postal code is required";
                isValid = false;
            } else if (!isValidPincode(fields.code.value)) {
                errors.code.textContent = "Enter valid 6-digit PIN code";
                isValid = false;
            }

            if (isEmpty(fields.country.value)) {
                errors.country.textContent = "Country is required";
                isValid = false;
            }

            if (!isValid) return;

            try {
                const response = await fetch('/profile/address-management', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        username: fields.name.value,
                        phone: fields.phone.value,
                        street: fields.street.value,
                        landmark: fields.landmark.value,
                        city: fields.city.value,
                        state: fields.state.value,
                        country: fields.country.value,
                        pincode: fields.code.value,
                        isDefault: fields.isDefault.checked
                    })
                });

                const result = await response.json();

                if (!result.success) {
                    Swal.fire({
                        toast: true,
                        icon: "error",
                        title: result.message || "Something went wrong",
                        position: "top-right",
                        showConfirmButton: false,
                        timer: 3000,
                    });
                    return;
                }

                Swal.fire({
                    icon: "success",
                    title: "Address added successfully",
                    timer: 1500,
                    showConfirmButton: false,
                });

                setTimeout(() => {
                    window.location.href = result.redirect || "/profile";
                }, 1500);

            } catch (err) {
                    Swal.fire({
                    toast: true,
                    icon: "error",
                    title: err.message,
                    position: "top-right",
                    showConfirmButton: false,
                    timer: 3000,
                    });
                }
            });



        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Address Modal Functions
        function openAddressModal() {
            document.getElementById('addAddressModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeAddressModal() {
            document.getElementById('addAddressModal').classList.add('hidden');
            addressForm.reset();
            clearErrors()
            document.body.style.overflow = 'auto';
        }

        // Close modal on Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
            closeAddressModal();
            }
        });
    </script>
