<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
        }
        .glass-effect {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #1f2937 0%, #000000 100%);
        }
        .hover-lift {
            transition: all 0.3s ease;
        }
        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }
        .profile-avatar {
            background: linear-gradient(135deg, #6b7280 0%, #1f2937 100%);
        }
</style>
<body class="bg-gray-50">
     <%- include('../Partials/nav-bar') %>
     
     <div class="max-w-7xl mx-auto px-6 py-8">
        <div class="flex gap-8">
            <%- include('../Partials/user-sidebar') %>

            
            
            <main class="flex-1 ml-0">
                <div class="glass-effect rounded-2xl shadow-xl border border-white/20 overflow-hidden mb-5" >
                    <div class="gradient-bg px-8 py-8 relative overflow-hidden">
                        <div class="absolute inset-0 opacity-10">
                            <div class="absolute top-0 right-0 w-64 h-64 bg-white rounded-full -translate-y-32 translate-x-32"></div>
                            <div class="absolute bottom-0 left-0 w-48 h-48 bg-white rounded-full translate-y-24 -translate-x-24"></div>
                        </div>
                        <div class="relative flex items-center justify-between">
                            <div>
                                <h2 class="text-3xl font-bold text-white mb-2">Orders</h2>
                                <p class="text-gray-300">Manage your orders</p>
                            </div>
                        
                        </div>
                    </div>
                </div>
                
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Classic Trench Coat -->

                    <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                        <div class="aspect-[3/4] bg-gray-100">
                            <img src="https://images.unsplash.com/photo-1591047139829-d91aecb6caea?w=500&h=700&fit=crop" 
                                 alt="Classic Trench Coat" 
                                 class="w-full h-full object-cover">
                        </div>
                        <div class="p-4">
                            <h3 class="text-lg font-semibold text-gray-900 mb-1">Classic Trench Coat</h3>
                            <p class="text-xl font-medium text-gray-900 mb-4">$189.99</p>
                            <div class="flex items-center gap-2">
                                <button class="flex-1 bg-black text-white py-3 px-6 rounded hover:bg-gray-800 transition-colors font-medium">
                                    Track
                                </button>
                                <button class="p-3 text-gray-400 hover:text-red-500 transition-colors">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
        
                    
                </div>
            </main>
        </div>
     </div>
      <script>
        const menuButton = document.getElementById('mobileMenuButton');
        const mobileMenu = document.getElementById('mobileMenu');

        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>