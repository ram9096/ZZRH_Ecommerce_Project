<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen py-8 px-4">
    <div class="max-w-4xl mx-auto">
        <!-- Success Icon -->
        <div class="flex justify-center mb-6">
            <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
        </div>

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Thank You for Your Order!</h1>
            <p class="text-gray-500">Your order #<%= order.orderCode %> has been successfully placed.</p>
        </div>

        <!-- Order Summary Card -->
        <div class="bg-white rounded-lg shadow-sm p-8 mb-6">
            <h2 class="text-xl font-bold text-gray-900 mb-2">Order Summary</h2>
            

            <!-- Product 1 -->
             <% order.orderItems.forEach(o=>{ %>

                <div class="flex items-center justify-between py-4 border-b border-gray-200">
                    <div class="flex items-center gap-4">
                        <div class="w-14 h-14 bg-gray-800 rounded shrink-0">
                            <img class="w-14 h-14" style="border-radius: 3px;" src="/<%= o.variantId.image[0] %>" alt="">
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900"><%= o.productName %></h3>
                            <p class="text-sm text-gray-500">Quantity: <%= o.quantity %></p>
                        </div>
                    </div>
                    <div class="text-gray-900 font-medium">₹<%= o.price %></div>
                </div>

            <% }) %>

            <!-- Price Breakdown -->
            <div class="space-y-3 py-6 border-b border-gray-200">
                <div class="flex justify-between text-gray-600">
                    <span>Subtotal</span>
                    <span>₹<%= order.subTotal %></span>
                </div>
                <div class="flex justify-between text-gray-600">
                    <span>Shipping</span>
                    <span>Free</span>
                </div>
                <div class="flex justify-between text-gray-600">
                    <span>Tax</span>
                    <span>₹<%= order.taxAmount.toFixed(2) %></span>
                </div>
            </div>

            <!-- Total -->
            <div class="flex justify-between items-center py-6">
                <span class="text-xl font-bold text-gray-900">Total</span>
                <span class="text-xl font-bold text-gray-900">₹<%= order.totalAmount %></span>
            </div>

            <!-- Shipping and Delivery Info -->
            <div class="grid md:grid-cols-2 gap-8 pt-6 border-t border-gray-200">
                <div>
                    <h3 class="font-bold text-gray-900 mb-3">Shipping Address</h3>
                    <div class="text-gray-600 space-y-1">
                        <p class="font-bold"><%= order.shippingAddressId.username %></p>
                        <p><%= order.shippingAddressId.street_address %></p>
                        <p><%= order.shippingAddressId.city %>, <%= order.shippingAddressId.state %>, <%= order.shippingAddressId.postal_code %></p>
                    </div>
                </div>
                <div>
                    <h3 class="font-bold text-gray-900 mb-3">Estimated Delivery</h3>
                    <p class="text-gray-600"><%= new Date(order.expectedDeliveryDate).toDateString() %> </p>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/checkout/invoice/<%= order._id %>">
                <button class="bg-black text-white px-8 py-3 rounded-lg font-medium hover:bg-gray-800 transition-colors">
                    Download invoice
                </button>
            </a>
            <a href="/home">
                <button class="bg-gray-200 text-gray-900 px-8 py-3 rounded-lg font-medium hover:bg-gray-300 transition-colors">
                    Continue Shopping
                </button>
            </a>
        </div>
    </div>
</body>
</html>