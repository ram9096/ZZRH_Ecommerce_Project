<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        @font-face {
            font-family: 'bloverly';
            src: url('/BLOVERLY.woff2') format('woff2');
        }
        @font-face {
            font-family: 'Clash-display';
            src: url('/ClashDisplay-Regular.woff') format('woff');
        }
    </style>
</head>
<body class="bg-white flex justify-center items-center min-h-screen">
    <div class="w-full max-w-md px-4">
        <!-- Password Strength Indicator -->
        <div id="strength-bar-container" class="flex justify-between items-center mb-8 hidden">
            <div class="text-xs text-gray-600" style="font-family: Clash-display;">Password Strength</div>
            <div class="flex-grow mx-4">
                <div class="h-1 bg-gray-200 rounded">
                    <div id="strength-bar" class="h-1 rounded"></div>
                </div>
            </div>
            <div id="strength-label" class="text-xs" style="font-family: Clash-display;"></div>
        </div>

        <!-- Main Form -->
        <div class="text-center mb-8">
            <h1 class="text-5xl text-gray-900 mb-12" style="font-family: bloverly;">Enter new password</h1>

            <form id="password-form" class="space-y-6" style="font-family: Clash-display;" action="/forgot-password" method="post">
                <!-- New Password Field -->
                <div class="relative">
                    <input
                        type="password"
                        id="new-password"
                        class="w-full border-b border-gray-300 focus:border-black focus:outline-none py-2 text-sm text-gray-500 pr-10"
                        placeholder="New password"
                        required
                    />
                    <button
                        type="button"
                        id="toggle-new"
                        class="absolute right-0 top-2 text-gray-500 hover:text-gray-700"
                    >
                        <i class="fas fa-eye"></i>
                    </button>
                </div>

                <!-- Confirm Password Field -->
                <div class="relative">
                    <input
                        type="password"
                        id="confirm-password"
                        name="password"
                        class="w-full border-b border-gray-300 focus:border-black focus:outline-none py-2 text-sm text-gray-500 pr-10"
                        placeholder="Confirm password"
                        required
                    />
                    <button
                        type="button"
                        id="toggle-confirm"
                        class="absolute right-0 top-2 text-gray-500 hover:text-gray-700"

                    >
                        <i class="fas fa-eye"></i>
                    </button>
                </div>

                <!-- Error Message -->
                <div id="error-message" class="text-red-500 text-sm min-h-[1.25rem] text-left hidden"></div>

                <!-- Change Password Button -->
                <button
                    type="submit"
                    class="w-full bg-black text-white py-3 px-4 rounded font-medium hover:bg-gray-800 transition-colors duration-200"
                >
                    Change password
                </button>
            </form>
        </div>
    </div>

    <script>
        function setupToggle(toggleId, inputId) {
            const toggleBtn = document.getElementById(toggleId);
            const input = document.getElementById(inputId);
            let isHidden = true;

            toggleBtn.addEventListener('click', () => {
                if (isHidden) {
                    input.type = 'text';
                    toggleBtn.innerHTML = '<i class="fas fa-eye-slash"></i>';
                } else {
                    input.type = 'password';
                    toggleBtn.innerHTML = '<i class="fas fa-eye"></i>';
                }
                isHidden = !isHidden;
            });
        }

        function evaluatePasswordStrength(password) {
            let score = 0;
            const checks = [
                password.length >= 8,
                /[a-z]/.test(password),
                /[A-Z]/.test(password),
                /\d/.test(password),
                /[^A-Za-z0-9]/.test(password)
            ];
            checks.forEach(check => check && score++);
            if (password.length === 0) return null;
            if (score < 3) return { width: 25, color: 'bg-red-500', label: 'Weak', level: 'weak' };
            if (score === 3) return { width: 50, color: 'bg-orange-500', label: 'Medium', level: 'medium' };
            if (score === 4) return { width: 75, color: 'bg-yellow-500', label: 'Strong', level: 'strong' };
            return { width: 100, color: 'bg-green-500', label: 'Very Strong', level: 'very-strong' };
        }

        function showStrength(password) {
            const container = document.getElementById('strength-bar-container');
            const bar = document.getElementById('strength-bar');
            const label = document.getElementById('strength-label');
            if (password.length === 0) {
                container.classList.add('hidden');
                return null;
            }
            container.classList.remove('hidden');
            const result = evaluatePasswordStrength(password);
            if (result) {
                bar.style.width = result.width + '%';
                bar.className = `h-1 rounded ${result.color}`;
                label.textContent = result.label;
                label.className = `text-xs ${result.color.replace('bg-', 'text-')}`;
            }
            return result;
        }

        function validateForm() {
            const newPassword = document.getElementById('new-password').value;
            const confirmPassword = document.getElementById('confirm-password').value;
            const errorMessage = document.getElementById('error-message');

            errorMessage.classList.add('hidden');
            errorMessage.textContent = '';

            const strength = showStrength(newPassword);
            if (!strength || strength.level === 'weak') {
                errorMessage.textContent = 'Password is too weak. Use at least 8 characters with a mix of letters, numbers, and symbols.';
                errorMessage.classList.remove('hidden');
                return false;
            }

            if (newPassword !== confirmPassword) {
                errorMessage.textContent = 'Passwords do not match.';
                errorMessage.classList.remove('hidden');
                return false;
            }

            return true;
        }

        // Setup
        // document.getElementById('password-form').addEventListener('submit', (e) => {
        //     e.preventDefault();
        //     if (validateForm()) {
        //         alert('Password changed successfully!'); // Replace with real submit logic
        //         // e.target.submit(); // Uncomment if you have a real form action
        //     }
        // });

        document.getElementById('new-password').addEventListener('input', () => validateForm());
        document.getElementById('confirm-password').addEventListener('input', () => validateForm());

        setupToggle('toggle-new', 'new-password');
        setupToggle('toggle-confirm', 'confirm-password');
    </script>
</body>
</html>