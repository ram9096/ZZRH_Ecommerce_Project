    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;500;600&display=swap');
        
       
        @font-face {
          font-family: "bloverly";
          src: url('/BLOVERLY.woff2') format('woff2');
          font-display: swap;
        }
        @font-face {
          font-family: "Clash-display";
          src: url('/ClashDisplay-Regular.woff') format('woff');
          font-display: swap;
        }
        .font-bloverly {
          font-family: "bloverly", system-ui, sans-serif;
        }
        .font-clash {
          font-family: "Clash-display", system-ui, sans-serif;
        }
        .brand-name {
            font-family: 'Playfair Display', serif;
            font-weight: 300;
            letter-spacing: 0.1em;
        }
        
        .quantity-btn {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: black;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 18px;
        }
        
        .quantity-input {
            width: 50px;
            text-align: center;
            border: 1px solid #e5e7eb;
            padding: 4px;
        }
        
        .color-option {
            width: 40px;
            height: 40px;
            border-radius: 4px;
            cursor: pointer;
            border: 2px solid transparent;
        }
        
        .color-option:hover {
            border-color: #9ca3af;
        }
        
        .size-option {
            padding: 8px 16px;
            border: 1px solid #d1d5db;
            cursor: pointer;
            background: white;
        }
        
        .size-option:hover {
            border-color: #6b7280;
        }
        
        .star-filled {
            color: #fbbf24;
        }
        
        .star-empty {
            color: #d1d5db;
        }
    </style>
</head>
<body class="bg-white">
