<%
    const selectedVariant = variant?.[0] || variant
%>


    <!-- Main Content -->
    <main class="container mx-auto px-8 ">
        <nav class="text-sm text-gray-500 mb-6 font-clash" aria-label="Breadcrumb">
  <ol class="flex flex-wrap items-center gap-1">

    <!-- Home -->
    <li>
      <a href="/" class="hover:text-black">Home</a>
    </li>

    <li>/</li>

    <!-- Category -->
    <% if (product?.categoryId?.categoryName) { %>
      <li>
        <a
          href="/home?category=<%= product.categoryId._id %>"
          class="hover:text-black"
        >
          <%= product.categoryId.categoryName %>
        </a>
      </li>
      <li>/</li>
    <% } %>

    <!-- Product -->
    <li class="text-black font-medium truncate max-w-[200px]">
      <%= product.name %>
    </li>

  </ol>
</nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Image Gallery -->
             
                <div class="space-y-4">
                    <div class="bg-gray-200 rounded-lg aspect-square">
                        <img id="img1"  src="/<%= selectedVariant?.image[0] %>" alt="">
                    </div>
                    <div class="grid grid-cols-3 gap-4">
                        <div class="bg-gray-200 rounded-lg aspect-square">
                            <img id="img2"class="cursor-pointer" src="/<%= selectedVariant?.image[1] %>" alt="">
                        </div>
                        <div class="bg-gray-200 rounded-lg aspect-square">
                            <img id="img3" class="cursor-pointer" src="/<%= selectedVariant?.image[2] %>" alt="">
                        </div>
                        
                    </div>
                </div>

            <!-- Product Details -->
            <div class="space-y-6 font-clash">
                
                    <div>
                        <h1 class="text-4xl font-light mb-4"> <%= product.name %> </h1>
                        <p id="price" class="text-3xl font-semibold">₹<%= selectedVariant?.price %>  </p>
                    </div>

                    <!-- Description -->
                    <div class="border border-gray-300 rounded-lg p-6">
                        <h3 class="font-semibold mb-2">Description</h3>
                        <p class="text-sm text-gray-600"><%= product.description %></p>
                    </div>

                    <!-- Color Selection -->
                    <div>
                        <h3 class="font-semibold mb-3">Color</h3>

                        <select
                            class="border rounded px-3 py-2"
                            id="color"
                        >
                            <% color.forEach(c => { %>
                            <option
                                value="<%= c %>"
                                
                            >
                                <%= c %>
                            </option>
                            <% }) %>
                    </select>
                    </div>


                    <!-- Size Selection -->
                    <div>
                        <h3 class="font-semibold mb-3">Size</h3>

                        <select
                            class="border rounded px-3 py-2"
                            id="size"
                        >
                            <% size.forEach(s => { %>
                            <option
                                value="<%= s %>"
                            >
                                <%= s %>
                            </option>
                            <% }) %>
                        </select>
                    </div>

               

                <!-- Quantity -->
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="font-semibold mb-3">Quantity</h3>
                        <div class="flex items-center gap-2">
                            <button class="quantity-btn">-</button>
                            <input type="text" value="1" class="quantity-input" readonly>
                            <button class="quantity-btn">+</button>
                        </div>
                    </div>
                    <button class="text-red-500 hover:text-red-600">
                        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"></path>
                        </svg>
                    </button>
                </div>

                <!-- Buttons -->
                <div class="space-y-3">
                    <button class="w-full bg-black text-white py-3 rounded hover:bg-gray-800 transition">Buy now</button>
                    <button class="w-full border border-black text-black py-3 rounded hover:bg-gray-50 transition">Add to cart</button>
                </div>
            </div>
        </div>

        <!-- Customer Reviews -->
        <section class="mt-16">
            <h2 class="text-3xl font-semibold mb-8">Customer Reviews</h2>
            
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Rating Summary -->
                <div class="lg:col-span-1">
                    <div class="flex items-baseline gap-2 mb-4">
                        <span class="text-5xl font-bold">4.2</span>
                        <div class="flex text-yellow-400">
                            <span class="star-filled">★</span>
                            <span class="star-filled">★</span>
                            <span class="star-filled">★</span>
                            <span class="star-filled">★</span>
                            <span class="star-empty">★</span>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600 mb-6">Based on 121 reviews</p>
                    
                    <div class="space-y-2">
                        <div class="flex items-center gap-3">
                            <span class="text-sm w-12">5 star</span>
                            <div class="flex-1 h-2 bg-gray-200 rounded">
                                <div class="h-full bg-yellow-400 rounded" style="width: 70%"></div>
                            </div>
                            <span class="text-sm w-8">70%</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="text-sm w-12">4 star</span>
                            <div class="flex-1 h-2 bg-gray-200 rounded">
                                <div class="h-full bg-yellow-400 rounded" style="width: 15%"></div>
                            </div>
                            <span class="text-sm w-8">15%</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="text-sm w-12">3 star</span>
                            <div class="flex-1 h-2 bg-gray-200 rounded">
                                <div class="h-full bg-yellow-400 rounded" style="width: 8%"></div>
                            </div>
                            <span class="text-sm w-8">8%</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="text-sm w-12">2 star</span>
                            <div class="flex-1 h-2 bg-gray-200 rounded">
                                <div class="h-full bg-yellow-400 rounded" style="width: 4%"></div>
                            </div>
                            <span class="text-sm w-8">4%</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="text-sm w-12">1 star</span>
                            <div class="flex-1 h-2 bg-gray-200 rounded">
                                <div class="h-full bg-yellow-400 rounded" style="width: 3%"></div>
                            </div>
                            <span class="text-sm w-8">3%</span>
                        </div>
                    </div>
                </div>

                <!-- Reviews -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Review 1 -->
                    <div class="border-b pb-6">
                        <div class="flex text-yellow-400 mb-2">
                            <span>★★★★★</span>
                        </div>
                        <h3 class="font-semibold mb-2">Perfect fit!</h3>
                        <p class="text-gray-700 mb-3">This is the best t-shirt I've ever owned. The material is so soft and the fit is just perfect. Not too loose, not too tight. I'll be buying more in different colors for sure!</p>
                        <div class="flex items-center gap-2 text-sm text-gray-500">
                            <span>Alex R.</span>
                            <span>•</span>
                            <span>June 15, 2024</span>
                        </div>
                    </div>

                    <!-- Review 2 -->
                    <div class="border-b pb-6">
                        <div class="flex text-yellow-400 mb-2">
                            <span>★★★★★</span>
                        </div>
                        <h3 class="font-semibold mb-2">Great quality, but a little long</h3>
                        <p class="text-gray-700 mb-3">The fabric is amazing, feels very high quality. My only complaint is that it runs a bit long for my taste. I'm 5'8" and the medium felt more like a tall size. Otherwise, a fantastic shirt.</p>
                        <div class="flex items-center gap-2 text-sm text-gray-500">
                            <span>Jessica M.</span>
                            <span>•</span>
                            <span>June 12, 2024</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


    <script>
      const menuButton = document.getElementById('mobileMenuButton');
      const mobileMenu = document.getElementById('mobileMenu');
      const price = document.getElementById('price')
      const img1 = document.getElementById('img1')
      const img2 = document.getElementById('img2')
      const img3 = document.getElementById('img3')
      const sizeSelect = document.getElementById('size')
      document.getElementById('color').addEventListener('change',async()=>{
        const id = '<%= product._id %>'
        const color = document.getElementById('color').value
        try{
            const res = await fetch(`/home/product-details/${id}`,{
                method:"POST",
                headers:{
                    "Content-type":"application/json"
                },
                body:JSON.stringify({
                    id:id,
                    type:"color",
                    value:color
                })
            })
            const data = await res.json()
            if(!data.success){

            }
            //price.innerHTML = data.product.price
            img1.src = `/${data.product.image[0]}`;
            img2.src = `/${data.product.image[1]}`;
            img3.src = `/${data.product.image[2]}`;
            sizeSelect.innerHTML = ''

            data.product.sizes.forEach((s,i)=>{
                const option = document.createElement('option')
                option.value = s.size
                option.innerHTML = s.size
                sizeSelect.appendChild(option)
                if (i === 0) {
                    price.innerHTML = `₹${s.price}`;
                }
            })
        }catch(e){

        }

      })

      document.getElementById('size').addEventListener('change',async()=>{
        const id = '<%= product._id %>'
        const size = document.getElementById('size').value
        try{
            const res = await fetch(`/home/product-details/${id}`,{
                method:"POST",
                headers:{
                    "Content-type":"application/json"
                },
                body:JSON.stringify({
                    id:id,
                    type:"size",
                    value:size
                })

            })
            const data = await res.json()
            if(!data.success){
                console.log(data.success)
            }
            price.innerHTML = data.product.price
        }catch(e){
            console.log(e)
        }
      })
      const thumbnail = [img2,img3]
      thumbnail.forEach(t=>{
        t.addEventListener('click',()=>{
            let temp = img1.src
            img1.src = t.src
            t.src = temp
        })
      })

      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    </script>
</body>
</html>