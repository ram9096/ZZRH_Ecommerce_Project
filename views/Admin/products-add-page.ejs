<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add New Product</title>

  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />
  <style>
    .animate-fade-in {
      animation: fadeIn 0.4s ease-out;
    }
    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(-10px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .loading-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 9999;
      justify-content: center;
      align-items: center;
    }
    .loading-overlay.active {
      display: flex;
    }
    .spinner {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #ef4444;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body class="bg-gray-50 font-sans">
  <!-- Loading Overlay -->
  <div id="loadingOverlay" class="loading-overlay">
    <div class="text-center">
      <div class="spinner mx-auto mb-4"></div>
      <p class="text-white text-lg">Uploading product...</p>
    </div>
  </div>

  <header class="bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold">#ZZRH</h1>
    <button class="p-2 hover:bg-gray-100 rounded-lg">
      <i class="far fa-bell text-xl"></i>
    </button>
  </header>

  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-white min-h-screen border-r border-gray-100 p-6">
      <nav class="space-y-4">
        <a href="/admin/home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-900">
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </a>
        <a href="/admin/users" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-gray-100 text-gray-700">
          <i class="fas fa-users"></i>
          <span>Users</span>
        </a>
        <a href="/admin/products" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-shopping-bag"></i>
          <span>Products</span>
        </a>
        <a href="/admin/home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-cube"></i>
          <span>Orders</span>
        </a>
        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-chart-line"></i>
          <span>Analytics</span>
        </a>
        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-ticket-alt"></i>
          <span>Coupons</span>
        </a>
        <a href="/admin/category" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-list-ul"></i>
          <span>Categories</span>
        </a>
        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-gift"></i>
          <span>Offers</span>
        </a>
        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-image"></i>
          <span>Banners</span>
        </a>
        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-user"></i>
          <span>Profile</span>
        </a>
        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
          <i class="fas fa-cog"></i>
          <span>Settings</span>
        </a>
      </nav>
      
      <div class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
        <a href="#" class="flex items-center space-x-3 text-gray-700 hover:text-gray-900">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </a>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8 bg-gray-50">
      <div class="max-w-2xl">
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-1">Add New Product</h2>
          <p class="text-sm text-red-500">Enter the details for the new product.</p>
        </div>

        <form class="space-y-6" id="productForm">
          <!-- Product Info -->
          <div class="grid grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-900 mb-2">Product Name *</label>
              <input
                id="p-name"
                type="text"
                name="productName"
                placeholder="Enter product name..."
                class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 bg-white text-sm validate"
                required
              />
              <span id="name-error" class="text-xs text-red-500"></span>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-900 mb-2">Category *</label>
               <select
               id="category"
                name="category"
                class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 appearance-none bg-white text-sm text-gray-500 validate"
                required
              >
                <option value="select category">Select Category</option>
                <% category.forEach(cat => { %>
                  <option value="<%= cat._id %>"><%= cat.categoryName %></option>
                <% }) %>
              </select>
              <span id="category-error" class="text-xs text-red-500"></span>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-900 mb-2">Description</label>
            <textarea
              id="description"
              rows="4"
              name="description"
              placeholder="Add product description"
              class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 bg-white text-sm resize-none"
            ></textarea>
            <span id="description-error" class="text-xs text-red-500"></span>
          </div>

          <div class="grid grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-900 mb-2">SKU</label>
              <input
                id="sku"
                type="text"
                name="sku"
                placeholder="Enter SKU"
                class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 bg-white text-sm"
              />
              <span id="sku-error" class="text-xs text-red-500"></span>
            </div>
          </div>

          <!-- Variants Container -->
          <div id="variantsContainer" class="space-y-6">
            <div class="variant-group bg-white border border-gray-200 rounded-lg p-6">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-900 variant-title">Variant 1</h3>
                <button
                  type="button"
                  class="delete-variant-btn px-3 py-1.5 bg-red-100 text-red-600 text-sm font-medium rounded-lg hover:bg-red-200 transition-colors hidden"
                  onclick="deleteVariant(this)"
                >
                  <i class="fas fa-trash-alt mr-1"></i> Delete
                </button>
              </div>
              
              <div class="grid grid-cols-2 gap-6 mb-6">
                <div>
                  <label class="block text-sm font-medium text-gray-900 mb-2">Color *</label>
                  <input
                    name="variants[0].color"
                    type="text"
                    placeholder="e.g. Red"
                    class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 bg-white text-sm validate"
                    required
                  />
                  <span class="text-xs text-red-500 hidden">Color is required</span>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-900 mb-2">Size *</label>
                  <select
                    name="variants[0].size"
                    class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 appearance-none bg-white text-sm text-gray-500 validate"
                    required
                  >
                    <option value="">Select Size</option>
                    <option>Small</option>
                    <option>Medium</option>
                    <option>Large</option>
                    <option>XL</option>
                  </select>
                  <span class="hidden text-xs text-red-500">Size is required</span>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-900 mb-2">Stock Quantity *</label>
                  <input
                    type="number"
                    name="variants[0].stock"
                    placeholder="e.g. 10"
                    class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 bg-white text-sm validate"
                    required
                  />
                  <span class="text-xs text-red-500 hidden">Stock is required</span>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-900 mb-2">Discounted Price *</label>
                  <input
                    type="number"
                    name="variants[0].discount"
                    placeholder="e.g. 100"
                    class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 bg-white text-sm validate"
                    required
                  />
                  <span class="text-xs text-red-500 hidden">Price is required</span>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-900 mb-2">Price *</label>
                  <input
                    type="number"
                    name="variants[0].price"
                    placeholder="e.g. 100"
                    class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 bg-white text-sm validate"
                    required
                  />
                  <span class="text-xs text-red-500 hidden">Price is required</span>
                </div>
              </div>

              <div class="grid grid-cols-3 gap-4">
                <!-- Image 1 -->
                <div>
                  <label class="block text-xs font-medium text-gray-900 text-2xl mb-1">Product Image</label>
                  <div class="border-2 border-dashed border-teal-400 rounded-lg p-3 h-28
                              text-center bg-teal-50 hover:bg-teal-100 cursor-pointer image-upload-area">
                    <div class="flex flex-col items-center justify-center h-full">
                      <i class="fas fa-upload text-teal-600 text-lg mb-1"></i>
                      <p class="text-xs text-gray-700">Upload</p>
                      <input type="file" name="variants[0].images" accept="image/*" class="hidden image-input" />
                      <p class="text-[10px] text-gray-600 mt-1 file-names truncate"></p>
                    </div>
                  </div>
                </div>

                <div>
                  <label class="block text-xs font-medium text-gray-900 mb-1"></label>
                  <div class="border-2 border-dashed border-teal-400 rounded-lg p-3 h-28 mt-5
                              text-center bg-teal-50 hover:bg-teal-100 cursor-pointer image-upload-area">
                    <div class="flex flex-col items-center justify-center h-full">
                      <i class="fas fa-upload text-teal-600 text-lg mb-1"></i>
                      <p class="text-xs text-gray-700">Upload</p>
                      <input type="file" name="variants[0].images" accept="image/*" class="hidden image-input" />
                      <p class="text-[10px] text-gray-600 mt-1 file-names truncate"></p>
                    </div>
                  </div>
                </div>

                <div>
                  <label class="block text-xs font-medium text-gray-900 mb-1"></label>
                  <div class="border-2 border-dashed border-teal-400 rounded-lg p-3 h-28 mt-5
                              text-center bg-teal-50 hover:bg-teal-100 cursor-pointer image-upload-area">
                    <div class="flex flex-col items-center justify-center h-full">
                      <i class="fas fa-upload text-teal-600 text-lg mb-1"></i>
                      <p class="text-xs text-gray-700">Upload</p>
                      <input type="file" name="variants[0].images" accept="image/*" class="hidden image-input" />
                      <p class="text-[10px] text-gray-600 mt-1 file-names truncate"></p>
                    </div>
                  </div>
                </div>
              </div>
              <span class="text-xs text-red-500 hidden variant-images-error">All 3 images are required</span>
            </div>
          </div>

          <!-- Add Variant Button -->
          <button
            type="button"
            id="addVariantBtn"
            class="mt-2 px-4 py-2 bg-gray-200 text-gray-800 text-sm font-medium rounded-lg hover:bg-gray-300 transition-colors"
          >
            + Add Another Variant
          </button>

          <!-- Action Buttons -->
          <div class="flex justify-end gap-3 pt-4">
            <a href="/admin/products">
              <button
                type="button"
                class="px-6 py-2.5 text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 text-sm font-medium transition-colors"
              >
                Cancel
              </button>
            </a>
            <button
              type="submit"
              class="px-6 py-2.5 bg-red-500 text-white rounded-lg hover:bg-red-600 text-sm font-medium transition-colors"
            >
              Complete Process
            </button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <script>
    // ===== Variant Management =====
    let variantIndex = 1;

    document.getElementById('addVariantBtn').addEventListener('click', function () {
      const container = document.getElementById('variantsContainer');
      const firstVariant = container.querySelector('.variant-group');
      const clone = firstVariant.cloneNode(true);
   
      clone.querySelectorAll('[name]').forEach(input => {
        input.name = input.name.replace(/\[\d+\]/, `[${variantIndex}]`);
        if (!input.classList.contains('image-input')) {
          input.value = '';
        }
      });

      clone.querySelectorAll('.file-names').forEach(el => el.textContent = '');
      clone.querySelectorAll('.error-msg').forEach(el => el.classList.add('hidden'));
      clone.querySelectorAll('.border-red-500').forEach(el => el.classList.remove('border-red-500'));
      clone.querySelector('.variant-title').textContent = `Variant ${variantIndex + 1}`;
      
      clone.querySelector('.delete-variant-btn').classList.remove('hidden');
      
      const uploadAreas = clone.querySelectorAll('.image-upload-area');
      const fileInputs = clone.querySelectorAll('.image-input');
      
      uploadAreas.forEach((area, idx) => {
        const input = fileInputs[idx];
        area.addEventListener('click', () => input.click());
        input.addEventListener('change', handleFileSelect);
      });

      container.appendChild(clone);
      variantIndex++;
      updateDeleteButtons();
    });

    function deleteVariant(btn) {
      const container = document.getElementById('variantsContainer');
      const variants = container.querySelectorAll('.variant-group');
      
      if (variants.length > 1) {
        btn.closest('.variant-group').remove();
        updateVariantNumbers();
        updateDeleteButtons();
      }
    }

    function updateVariantNumbers() {
      const variants = document.querySelectorAll('.variant-group');
      variants.forEach((variant, index) => {
        variant.querySelector('.variant-title').textContent = `Variant ${index + 1}`;
        
        variant.querySelectorAll('[name]').forEach(input => {
          if (input.name.includes('variants[')) {
            input.name = input.name.replace(/variants\[\d+\]/, `variants[${index}]`);
          }
        });
      });
      variantIndex = variants.length;
    }

    function updateDeleteButtons() {
      const variants = document.querySelectorAll('.variant-group');
      const deleteButtons = document.querySelectorAll('.delete-variant-btn');
      
      deleteButtons.forEach(btn => {
        if (variants.length > 1) {
          btn.classList.remove('hidden');
        } else {
          btn.classList.add('hidden');
        }
      });
    }

    function handleFileSelect(e) {
      const files = e.target.files;
      const display = e.target.parentElement.querySelector('.file-names');
      if (files.length > 0) {
        const names = Array.from(files).map(f => f.name).join(', ');
        display.textContent = names.length > 20 ? names.substring(0, 20) + '...' : names;
      } else {
        display.textContent = '';
      }
    }
    document.querySelectorAll('.image-upload-area').forEach(area => {
      area.addEventListener('click', () => {
        area.querySelector('.image-input').click();
      });
    });
    document.querySelectorAll('.image-input').forEach(input => {
      input.addEventListener('change', handleFileSelect);
    });

    // ===== Form Validation =====
    (function (){

      //
      const form = document.querySelector('form');
      const fields = {
        name: document.getElementById('p-name'),
        category: document.getElementById('category'),
        description: document.getElementById('description'),
        sku: document.getElementById('sku')
      }
      const errors = {
        name: document.getElementById('name-error'),
        category: document.getElementById('category-error'),
        description: document.getElementById('description-error'),
        sku: document.getElementById('sku-error')
      }

      function validate(field){
        const value = fields[field].value.trim()
        switch (field){
          case "name":
            if (value.length < 3) {
              errors.name.textContent = "Enter valid name"


              return false
            }
            if (!/^[A-Za-z]+( [A-Za-z]+)*$/.test(value)){
              errors.name.textContent = "Only characters accepted"


              return false
            }
            errors.name.textContent = ""
            return true
          case "category":
            if(value === ""||value.toUpperCase() == 'SELECT CATEGORY'){
              errors.category.textContent = "Please select...."
              return false
            }
            errors.category.textContent = ""
            return true
          case "description":
            if(value.length == 0){
              errors.description.textContent = "Enter a valid description"
              return false
            }
            if(value.length<5){
              errors.description.textContent = "Please enter atleast 5 characters"



              return false
            }
            if(value.length>100){
              errors.description.textContent = "Sorry it cannot be too long...."
              return false
            }
            errors.description.textContent = ""
            return true
          case "sku":
            if(value.length>12){
              errors.sku.textContent = "It cannot be too long..."
              return false
            }
            errors.sku.textContent = ""
            return true
          default:
            return true;
        }
      }  

      Object.keys(fields).forEach(field => {
        fields[field].addEventListener("input", () => validate(field))
        fields[field].addEventListener("blur", () => validate(field))
      })

      function validateVariants() {
        let variantsValid = true;
        const variants = document.querySelectorAll('.variant-group');
        
        variants.forEach((variant, i) => {
          const colorInput = variant.querySelector('input[name*="color"]');
          const colorError = colorInput.nextElementSibling;
          if (!colorInput.value.trim()) {
            colorError.textContent = 'Color is required';
            colorError.classList.remove('hidden');
            variantsValid = false;
          } else {
            colorError.classList.add('hidden');
          }

          const sizeSelect = variant.querySelector('select[name*="size"]');
          const sizeError = sizeSelect.nextElementSibling;

          if (!sizeSelect.value) {
            sizeError.textContent = 'Size is required';
            sizeError.classList.remove('hidden');
            variantsValid = false;
          } else {
            sizeError.classList.add('hidden');
          }

          const stockInput = variant.querySelector('input[name*="stock"]');
          const stockError = stockInput.nextElementSibling;
          if (!stockInput.value || parseFloat(stockInput.value) <= 0) {
            stockError.textContent = 'Stock is required and must be positive';
            stockError.classList.remove('hidden');
            variantsValid = false;
          } else {
            stockError.classList.add('hidden');
          }

          const priceInput = variant.querySelector('input[name*="price"]');
          const priceError = priceInput.nextElementSibling;
          if (!priceInput.value || parseFloat(priceInput.value) <= 0) {
            priceError.textContent = 'Price is required and must be positive';
            priceError.classList.remove('hidden');
            variantsValid = false;
          } else {
            priceError.classList.add('hidden');
          }

          const imageInputs = variant.querySelectorAll('.image-input');
          const imageError = variant.querySelector('.variant-images-error');
          let uploadedCount = 0;
          
          imageInputs.forEach(input => {
            if (input.files && input.files.length > 0) {
              uploadedCount++;
            }
          });
          
          if (uploadedCount < 3) {
            imageError.textContent = `All 3 images are required (${uploadedCount}/3 uploaded)`;
            imageError.classList.remove('hidden');
            variantsValid = false;
          } else {
            imageError.classList.add('hidden');
          }
        });

        return variantsValid;
      }

      // ===== AJAX FORM SUBMISSION =====
      form.addEventListener("submit", async function (e) {
        e.preventDefault();
        
        let valid = true;
        Object.keys(fields).forEach(field => {
          if (!validate(field)) valid = false;
        });
        
        if (!validateVariants()) {
          valid = false;
        }
        
        if (!valid) {
          Swal.fire({
            toast: true,
            icon: 'error',
            title: 'Please fix all validation errors',
            position: 'top-right',
            showConfirmButton: false,
            timer: 3000
          });
          return;
        }

        document.getElementById('loadingOverlay').classList.add('active');

        try {
          const formData = new FormData(form);

          const response = await fetch('/admin/product-add', {
            method: 'POST',
            body: formData
          });

          document.getElementById('loadingOverlay').classList.remove('active');

          const result = await response.json();

          if (result.success) {
            await Swal.fire({
              icon: 'success',
              title: 'Success!',
              text: result.message || 'Product added successfully',
              confirmButtonColor: '#ef4444',
              confirmButtonText: 'View Products'
            });

            window.location.href = result.redirect;
          } else {
            Swal.fire({
              toast: true,
              icon: 'error',
              title: result.message,
              position: 'top-right',
              showConfirmButton: false,
              timer: 3000
            });
          }
        } catch (error) {
          document.getElementById('loadingOverlay').classList.remove('active');
          Swal.fire({
            toast: true,
            icon: 'error',
            title: 'Network error. Please try again.',
            position: 'top-right',
            showConfirmButton: false,
            timer: 3000
          });
          console.error('Error:', error);
        }
      });
    })();

    const buttons = document.querySelectorAll('.button');
    buttons.forEach(btn => {
      btn.addEventListener('click', function () {
        buttons.forEach(b => b.classList.remove('bg-red-600', 'text-white', 'border-red-600'));
        this.classList.add('bg-red-600', 'text-white', 'border-red-600');
      });
    });
  </script>
</body>
