<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 font-sans">
    <header class="bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">#ZZRH</h1>
        <button class="p-2 hover:bg-gray-100 rounded-lg">
            <i class="far fa-bell text-xl"></i>
        </button>
    </header>
    
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-white min-h-screen border-r border-gray-100 p-6">
            <nav class="space-y-4">
                <a href="/admin/home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-900">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/users" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/products" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-gray-100 text-gray-700">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/orders" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cube"></i>
                    <span>Orders</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-chart-line"></i>
                    <span>Analytics</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/category" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-list-ul"></i>
                    <span>Categories</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-gift"></i>
                    <span>Offers</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-image"></i>
                    <span>Banners</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </nav>
            
            <div class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                <a href="#" class="flex items-center space-x-3 text-gray-700 hover:text-gray-900">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>
        <% if (error) { %>
            <div id="popup"
                class="fixed top-5 right-5 bg-red-500 text-white px-4 py-3 rounded shadow-lg animate-fade-in">
            <%= error %>
            </div>

            <script>
            setTimeout(() => {
                document.getElementById("popup").classList.add("opacity-0");
            }, 2500);
            </script>

            <style>
            .animate-fade-in { 
                animation: fadeIn 0.4s ease-out;
            }
            @keyframes fadeIn {
                0% { opacity: 0; transform: translateY(-10px); }
                100% { opacity: 1; transform: translateY(0); }
            }
            </style>
        <% } %>
        <!-- Main Content -->
        <main class="flex-1 p-8 bg-gray-50">
            <div class="max-w-2xl">
                <!-- Header -->
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-gray-900 mb-1">Add New Product</h2>
                    <p class="text-sm text-red-500">Enter the details for the new product.</p>
                </div>
                

                <!-- Form -->
                <form class="space-y-6" action="/admin/product-add" method="post" enctype="multipart/form-data">
                    <!-- Product Name and Category -->
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-900 mb-2">Product Name</label>
                            <input type="text" placeholder="Enter the product name..." name="productName" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent bg-white text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-900 mb-2">Category</label>
                            <select name="category" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent appearance-none bg-white text-sm text-gray-500">
                                <option>Select Category</option>
                                <% category.forEach(category =>{ %>
                                    <option value="<%= category._id %>"><%= category.categoryName %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-medium text-gray-900 mb-2">Description</label>
                        <textarea rows="4" name="description" placeholder="Add product Description" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent bg-white text-sm resize-none"></textarea>
                    </div>

                    <!-- Price and Discount -->
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-900 mb-2">Price</label>
                            <input name="price" type="text" placeholder="Enter price" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent bg-white text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-900 mb-2">Offer</label>
                            <input type="text" name="offer" placeholder="Enter Offer" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent bg-white text-sm">
                        </div>
                        
                    </div>

                    <!-- SKU and Stock Quantity -->
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-900 mb-2">SKU</label>
                            <input type="text" name="sku" placeholder="Enter SKU" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent bg-white text-sm">
                        </div>
                        
                        
                    </div>
                     <div class="mb-12">
                        <label class="block text-gray-900 font-bold text-lg mb-4">Status</label>
                        <div class="flex gap-4">
                            <button 
                                onclick="set_status(false)"
                                type="button" 
                                class="button px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition"
                            >
                                Inactive
                            </button>
                            <button 
                                onclick="set_status(true)"
                                type="button" 
                                class="button px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition"
                            >
                                Active
                            </button>
                        </div>
                    </div>
                     <input type="hidden" name="status" id="status_Input">
                    <!-- <button type="submit" class="px-6 py-2.5 bg-red-500 text-white rounded-lg hover:bg-red-600 text-sm font-medium transition-colors">
                        Create product
                    </button>
                    <p class="text-sm text-red-500 mt-2">*Before adding the variant create the product </p>
                     -->
                    <div class="bg-white border border-gray-200 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Variant</h3>
                        
                        <div class="grid grid-cols-2 gap-6 mb-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-900 mb-2">Color</label>
                                <input name="color" type="text" placeholder="Enter color" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent bg-white text-sm">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-900 mb-2">Size</label>
                                <select name="size" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent appearance-none bg-white text-sm text-gray-500">
                                    <option>Select Size</option>
                                    <option>Small</option>
                                    <option>Medium</option>
                                    <option>Large</option>
                                    <option>XL</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-900 mb-2">Stock Quantity</label>
                                <input type="text" name="stock" placeholder="Enter Stock Quantity" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent bg-white text-sm">
                            </div>
                        </div>

                        <!-- Image Upload -->
                        <div>
                            <label class="block text-sm font-medium text-gray-900 mb-2">Product Images</label>
                            <div class="border-2 border-dashed border-teal-400 rounded-lg p-8 text-center bg-teal-50 hover:bg-teal-100 transition-colors cursor-pointer">
                                <div class="flex flex-col items-center">
                                    <div class="w-16 h-16 bg-teal-500 rounded-lg flex items-center justify-center mb-3">
                                        <i class="fas fa-upload text-white text-2xl"></i>
                                    </div>
                                    <p class="text-sm font-medium text-gray-900 mb-1">Drag & drop images here, or upload from your device.</p>
                                    <input type="file" name="image-upload" multiple accept="image/*" class="hidden" id="imageUpload">
                                    <p id="fileCount" class="text-sm text-gray-600 mt-2"></p>
                                </div>
                            </div>
                        </div>
                        

                            <!-- <div class="mt-4 flex justify-end">
                                <button type="button" class="px-4 py-2 bg-red-500 text-white text-sm font-medium rounded-lg hover:bg-red-600 transition-colors">
                                    Add Variant
                                </button>
                            </div> -->
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex justify-end gap-3 pt-4">
                            <a href="/admin/products">
                                <button type="button" class="px-6 py-2.5 text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 text-sm font-medium transition-colors">
                                    Cancel
                                </button>
                            </a>
                            <button type="submit" class="px-6 py-2.5 bg-red-500 text-white rounded-lg hover:bg-red-600 text-sm font-medium transition-colors">
                                Complete process
                            </button>
                        </div>
                </form>
                 
                    
                
            </div>
        </main>
    </div>

    <script>
        const status_Input = document.getElementById("status_Input")
        function set_status(msg){
            status_Input.value = msg
        }
        document.querySelector('.border-dashed').addEventListener('click', function() {
            document.getElementById('imageUpload').click();
        });

        // document.getElementById('imageUpload').addEventListener('change', function(e) {
        //     const files = e.target.files;
        //     if (files.length > 0) {
        //         alert(`${files.length} file(s) selected`);
        //     }
        // });
        document.getElementById('imageUpload').addEventListener('change', function (e) {
            const files = e.target.files;
            const fileCount = document.getElementById('fileCount');

            if (files.length > 0) {
                const names = Array.from(files).map(file => file.name).join(', ');
                fileCount.textContent = `Selected: ${names}`;
            }
        });


        const statusButtons = document.querySelectorAll('.button');
        const statusGroup = Array.from(statusButtons).slice(-2);
        
        statusGroup.forEach(button => {
            button.addEventListener('click', function() {
                statusGroup.forEach(btn => {
                    btn.classList.remove('bg-red-600', 'text-white', 'border-red-600');
                    btn.classList.add('border-gray-300', 'text-gray-700');
                });
                this.classList.remove('border-gray-300', 'text-gray-700');
                this.classList.add('bg-red-600', 'text-black', 'border-red-600');
            });
        });
    </script>
</body>
</html>