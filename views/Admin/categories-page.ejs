                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-chart-line"></i>
                    <span>Analytics</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/category" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-gray-100 text-gray-700">
                    <i class="fas fa-list-ul"></i>
                    <span>Categories</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-gift"></i>
                    <span>Offers</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-image"></i>
                    <span>Banners</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </nav>
            
            <div class=" flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                <a href="#" class="flex items-center space-x-3 text-gray-700 hover:text-gray-900">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1">
            <!-- Header -->
            <header class="bg-white shadow-sm p-6 flex justify-between items-center">
                <h2 class="text-3xl font-bold">Category Management</h2>
                <button class="p-2 rounded-full hover:bg-gray-100">
                    <i class="fas fa-bell text-gray-600"></i>
                </button>
            </header>

            <!-- Content Area -->
            <div class="p-8">
                <!-- Search and Add Button -->
                <div class="flex justify-between items-center mb-6">
                    <div class="relative flex-1 max-w-md">
                        <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        <input 
                            type="text" 
                            placeholder="Search categories..." 
                            value="<%= search %>"
                            onkeyup="handleSearch(this.value)"
                            class="w-full pl-12 pr-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-200"
                        >
                    </div>
                    <div class="flex gap-3 mb-6">
                        <form action="/admin/category" method="GET">
                                <select name="status" onchange="this.form.submit()" class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition">
                                    <option value="" <% if(status == ""){ %> selected <% } %>>All</option>
                                    <option value="true" <% if(status == "true"){ %> selected <% } %>>Active</option>
                                    <option value="false" <% if(status == "false"){ %> selected <% } %>>Inactive</option>
                                </select>
                                
                                <select name="sort" onchange="this.form.submit()" class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition"  >
                                    
                                    <option value="latest" <%= sort === "latest" ? "selected" : "" %> >Latest</option>
                                    <option value="oldest" <%= sort === "oldest" ? "selected" : "" %> >Oldest</option>
                                </select>
                            </form>
                            <a href="/admin/category">
                                <button class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition">Reset</button>
                            </a>

                        
                        <!-- <button class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition">
                            Sort by
                        </button> -->
                    </div>
                    <a href="/admin/category-add">
                        <button class="ml-4 px-6 py-3 bg-pink-100 text-pink-600 rounded-lg hover:bg-pink-200 transition font-medium">
                            Add Category
                        </button>
                    </a>
                </div>
                 <% if(error) {%>
                    <script>
                    Swal.fire({
                            toast: true,
                            icon: 'error',
                            title: '<%=error%>',
                            position: 'top-right',
                            showConfirmButton: false,
                            timer: 3000
                        });
                    </script>
                <% } %>
                <!-- Table -->
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-gray-50 border-b">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Category Name</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Description</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Status</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Product Count</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-pink-600">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            <!-- <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 text-gray-900">Men</td>
                                <td class="px-6 py-4 text-gray-600">Clothing, fashion wear, and accessories for men</td>
                                <td class="px-6 py-4 text-gray-900">120</td>
                                <td class="px-6 py-4">
                                    <button class="text-pink-600 hover:text-pink-700 font-medium mr-4">Edit</button>
                                    <button class="text-pink-600 hover:text-pink-700 font-medium">Delete</button>
                                </td>
                            </tr>
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 text-gray-900">Women</td>
                                <td class="px-6 py-4 text-gray-600">Fashion apparel, accessories, and essentials for women</td>
                                <td class="px-6 py-4 text-gray-900">150</td>
                                <td class="px-6 py-4">
                                    <button class="text-pink-600 hover:text-pink-700 font-medium mr-4">Edit</button>
                                    <button class="text-pink-600 hover:text-pink-700 font-medium">Delete</button>
                                </td>
                            </tr>
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 text-gray-900">Kids</td>
                                <td class="px-6 py-4 text-gray-600">Apparel and accessories for boys and girls</td>
                                <td class="px-6 py-4 text-gray-900">95</td>
                                <td class="px-6 py-4">
                                    <button class="text-pink-600 hover:text-pink-700 font-medium mr-4">Edit</button>
                                    <button class="text-pink-600 hover:text-pink-700 font-medium">Delete</button>
                                </td>
                            </tr> -->

                            <% data.forEach(user=>{%>
                                <tr class="hover:bg-gray-50 transition">
                                    <td class="px-6 py-4 text-gray-900"> <%= user.categoryName %> </td>
                                    <td class="px-6 py-4 text-gray-600"> <%= user.description %></td>
                                    <td class="px-6 py-4">
                                    <% 
                                        const badgeClass = user.isActive 
                                            ? "bg-green-100 text-green-700" 
                                            : "bg-red-100 text-red-700"; 
                                        const badgeText = user.isActive ? "Active" : "Inactive";
                                    %>

                                    <span class="px-3 py-1 rounded-full text-sm font-medium <%= badgeClass %>">
                                        <%= badgeText %>
                                    </span>
                                </td>
                                    <td class="px-6 py-4 text-gray-900">120</td>
                                    <td class="px-6 py-4">
                                        <a href="/admin/category-edit/<%= user._id %>">
                                            <button class="text-pink-600 hover:text-pink-700 font-medium mr-4">Edit</button>
                                        </a>
                                        <!-- <button class="text-pink-600 hover:text-pink-700 font-medium">Delete</button> -->
                                    </td>

                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="flex items-center justify-between mt-6">
                <div class="text-sm text-gray-600">
                    Showing 
                    <%= (currentPage - 1) * 5 + 1 %> 
                    to 
                    <%= Math.min(currentPage * 5, totalUser) %> 
                    of 
                    <%= totalUser %> categories
                </div>

                <div class="flex items-center gap-2">
                    <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %>&status=<%= status %>"
                        class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-gray-100">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <% } %>
                    <% for (let i = 1; i <= totalPage; i++) { %>
                    <a href="?page=<%= i %>&status=<%= status %>"
                        class="w-10 h-10 flex items-center justify-center rounded-lg
                        <%= i === currentPage ? 'bg-red-100 font-bold' : 'hover:bg-gray-100' %>">
                        <%= i %>
                    </a>
                    <% } %>
                    <% if (currentPage < totalPage) { %>
                    <a href="?page=<%= currentPage + 1 %>&status=<%= status %>"
                        class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-gray-100">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <% } %>
                </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        let timer;
        function handleSearch(value) {
            clearTimeout(timer);
            timer = setTimeout(() => {
                const params = new URLSearchParams(window.location.search);
                params.set("search", value);
                params.set("page", 1);
                window.location.search = params.toString();
            }, 400);
        }
    </script>
</body>
</html>