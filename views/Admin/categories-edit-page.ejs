<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Management - ZZRH</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

  <!-- SweetAlert2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 font-sans">
    <% if(error) {%>
            <script>
            Swal.fire({
                    toast: true,
                    icon: 'error',
                    title: '<%=error%>',
                    position: 'top-right',
                    showConfirmButton: false,
                    timer: 3000
                });
            </script>
        <% } %>

    <header class="bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">#ZZRH</h1>
        <button class="p-2 hover:bg-gray-100 rounded-lg">
            <i class="far fa-bell text-xl"></i>
        </button>
    </header>
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-white min-h-screen border-r border-gray-100 p-6">
            <nav class="space-y-4">
                <a href="/admin/home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-900">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/users" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/products" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/orders" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cube"></i>
                    <span>Orders</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-chart-line"></i>
                    <span>Analytics</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/category" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-gray-100 text-gray-700">
                    <i class="fas fa-list-ul"></i>
                    <span>Categories</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-gift"></i>
                    <span>Offers</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-image"></i>
                    <span>Banners</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </nav>
            
            <div class=" flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                <a href="/admin/logout" class="flex items-center space-x-3 text-gray-700 hover:text-gray-900">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-12">
            <!-- Back Link -->
            <a href="/admin/category" class="inline-flex items-center gap-2 text-red-600 hover:text-red-700 mb-8">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <span>Back to Category Management</span>
            </a>

            <!-- Page Header -->
            <div class="mb-12">
                <h1 class="text-4xl font-bold text-gray-900 mb-2">Edit Category</h1>
                <p class="text-red-600">Create a new category for your products.</p>
            </div>

            <!-- Form -->
            <form class="max-w-2xl" action="/admin/category-edit/<%= id %>" method="post">
                <!-- Category Name -->
                <div class="mb-8">
                    <label class="block text-gray-900 font-medium mb-3">Category name</label>
                    <input 
                        id="category_name"
                        name="category_name"
                        type="text" 
                        placeholder="e.g., Men / Women / Kids" 
                        value="<%= name %>"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent"
                    >
                    <span id="category-error" class="text-xs text-red-500"></span>
                </div>

                <!-- Description -->
                <div class="mb-8">
                    <label class="block text-gray-900 font-medium mb-3">Description of category</label>
                    <textarea 
                    id="description"
                        name="description"
                        placeholder="Description of category" 
                        rows="6" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent resize-none"
                    ><%= description %></textarea>
                    <span id="description-error" class="text-xs text-red-500"></span>
                </div>

                <!-- Status -->
                <div class="mb-12">
                    <label class="block text-gray-900 font-bold text-lg mb-4">Status</label>
                    <div class="flex gap-4">
                        <button 
                            id="inactive"
                            onclick="set_status(false)"
                            type="button" 
                            class="button px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition   <%= status === false 
          ? 'bg-red-500 text-white border-red-500' 
          : 'border-gray-300 text-gray-700 hover:bg-gray-50' %>"
                        >
                            Inactive
                        </button>
                        <button 
                            id="active"
                            onclick="set_status(true)"
                            type="button" 
                            class="button px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition <%= status === true 
          ? 'bg-red-500 text-white border-red-500' 
          : 'border-gray-300 text-gray-700 hover:bg-gray-50' %>"
                        >
                            Active
                        </button>
                    </div>
                </div>
                <input type="hidden" name="status" id="status_Input">
                <span id="status-error" class="text-xs text-red-500"></span>

                <!-- Action Buttons -->
                <div class="flex justify-end gap-4">
                    <a href="/admin/category">
                        <button 
                        type="button" 
                        class="px-8 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition font-medium"
                    >
                        Cancel
                    </button>
                    </a>
                    <button 
                        type="submit" 
                        class="px-8 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-medium"
                    >
                        Create Category
                    </button>
                </div>
            </form>
        </main>
    </div>

    <script>
        (function(){
            const fields = {
                name:document.getElementById('category_name'),
                description:document.getElementById('description'),
                status:document.getElementById('status_Input')
            }
            const errors = {
                name:document.getElementById('category-error'),
                description:document.getElementById('description-error'),
                status:document.getElementById('status-error')
            }
            function validateField(field){
                const value = fields[field].value.trim()
                switch (field){
                    case "name":
                        if (value.length < 3) {
                            errors.name.textContent = "Enter valid name"
                            return false
                        }
                        if(!/^[A-Za-z]+( [A-Za-z]+)*$/.test(value)){
                            errors.name.textContent = "Only characters accepted"
                            return false
                        }
                        errors.name.textContent = ""
                        return true
                    case "description":
                        if(value.length == 0){
                        errors.description.textContent = "Enter a valid description"
                        return false
                        }
                        if(value.length<5){
                        errors.description.textContent = "Please enter atleast 5 characters"
                        return false


                        }
                        if(value.length>300){
                        errors.description.textContent = "Sorry it cannot be too long...."
                        return false
                        }
                        if(!/^[A-Za-z]+( [A-Za-z]+)*$/.test(value)){
                            errors.description.textContent = "Only characters"
                            return false
                        }
                        errors.description.textContent = ""
                        return true
                    case "status":
                        if(!value){
                            errors.status.textContent = "Enter status"
                            return false
                        }
                        errors.status.textContent = ""
                        return true
                        
                }
            }

             Object.keys(fields).forEach(field => {
                fields[field].addEventListener("input", () => validateField(field))
                fields[field].addEventListener("blur", () => validateField(field))
            })
            form.addEventListener("submit", function (e) {
                let valid = true
                Object.keys(fields).forEach(field => {
                if (!validateField(field)) valid = false
                })
                if (!valid) e.preventDefault()
            })
        })()
        const statusButtons = document.querySelectorAll('.button');
        const statusGroup = Array.from(statusButtons).slice(-2);
        function set_status(msg){
            
            const status_Input = document.getElementById("status_Input")
            const active = document.getElementById('active')
            const inactive = document.getElementById('inactive')
            active.classList.remove('bg-red-500','text-white','border-red-500');
            inactive.classList.remove('bg-red-500', 'text-white','border-red-500');
            if(msg){
                active.classList.add('bg-red-500','text-white','border-red-500');
            }else{
                inactive.classList.add('bg-red-500', 'text-white','border-red-500');
            }
            status_Input.value = msg
        }
        
        statusGroup.forEach(button => {
            button.addEventListener('click', function() {
                statusGroup.forEach(btn => {
                    btn.classList.remove('bg-red-600', 'text-white', 'border-red-600');
                    btn.classList.add('border-gray-300', 'text-gray-700');
                });
                this.classList.remove('border-gray-300', 'text-gray-700');
                this.classList.add('bg-red-600', 'text-black', 'border-red-600');
            });
        });
    </script>
</body>
</html>