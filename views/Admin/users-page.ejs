<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
        }
        .glass-effect {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #1f2937 0%, #000000 100%);
        }
        .hover-lift {
            transition: all 0.3s ease;
        }
        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Top Navigation -->
    <nav class="glass-effect border-b border-white/20 shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 gradient-bg rounded-xl flex items-center justify-center text-white font-bold">
                        Z
                    </div>
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-black bg-clip-text text-transparent">#ZZRH</h1>
                </div>
                <button class="relative p-3 hover:bg-white/50 rounded-xl transition-all">
                    <i class="far fa-bell text-xl text-gray-700"></i>
                    <span class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full"></span>
                </button>
            </div>
        </div>
    </nav>

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <%- include('../Partials/sidebar') %>
        
        <% if(error) {%>
            <script>
            Swal.fire({
                    toast: true,
                    icon: 'error',
                    title: '<%=error%>',
                    position: 'top-right',
                    showConfirmButton: false,
                    timer: 3000
                });
            </script>
        <% } %>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            <!-- Header Section -->
            <div class="mb-8">
                <h2 class="text-4xl font-bold text-gray-800 mb-1">Customers</h2>
                <p class="text-gray-500">Manage your customer base</p>
            </div>

            <!-- Filters Card -->
            <div class="glass-effect rounded-2xl shadow-xl p-6 mb-6 border border-white/20">
                <div class="flex flex-wrap gap-4 items-center">
                    <!-- Search -->
                    <div class="flex-1 min-w-[300px]">
                        <div class="relative">
                            <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <input 
                                onkeyup="handleSearch(this.value)" 
                                value="<%= search %>" 
                                type="text" 
                                id="searchBox" 
                                placeholder="Search customers..." 
                                class="w-full pl-12 pr-4 py-3 bg-white/70 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all"
                            >
                        </div>
                    </div>

                    <!-- Filters -->
                    <form action="/admin/users" method="GET" class="flex gap-3">
                        <select name="status" onchange="this.form.submit()" class="px-5 py-3 bg-white/70 border-2 border-gray-300 rounded-xl font-medium hover:bg-white transition-all focus:outline-none focus:ring-2 focus:ring-gray-400 cursor-pointer">
                            <option value="" <% if(status == ""){ %> selected <% } %>>üìä All Status</option>
                            <option value="true" <% if(status == "true"){ %> selected <% } %>>‚úÖ Active</option>
                            <option value="false" <% if(status == "false"){ %> selected <% } %>>‚ùå Inactive</option>
                        </select>
                        
                        <select name="sort" onchange="this.form.submit()" class="px-5 py-3 bg-white/70 border-2 border-gray-300 rounded-xl font-medium hover:bg-white transition-all focus:outline-none focus:ring-2 focus:ring-gray-400 cursor-pointer">
                            <option value="latest" <%= sort === "latest" ? "selected" : "" %>>üïê Latest</option>
                            <option value="oldest" <%= sort === "oldest" ? "selected" : "" %>>‚è∞ Oldest</option>
                        </select>
                    </form>
                </div>
            </div>

            <!-- Customer Table Card -->
            <div class="glass-effect rounded-2xl shadow-xl overflow-hidden border border-white/20">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="bg-gradient-to-r from-gray-800 to-black text-white">
                                <th class="px-6 py-4 text-left text-sm font-semibold">
                                    <div class="flex items-center space-x-2">
                                        <i class="fas fa-user"></i>
                                        <span>Customer</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">
                                    <div class="flex items-center space-x-2">
                                        <i class="fas fa-envelope"></i>
                                        <span>Contact</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">
                                    <div class="flex items-center space-x-2">
                                        <i class="fas fa-toggle-on"></i>
                                        <span>Status</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">
                                    <div class="flex items-center space-x-2">
                                        <i class="fas fa-cog"></i>
                                        <span>Actions</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>

                        <tbody id="tableBody" class="divide-y divide-gray-100">
                            <% data.forEach(user => { %>
                                <tr class="hover:bg-gray-100 transition-all">
                                    <!-- USER NAME -->
                                    <td class="px-6 py-5">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-gray-700 to-black flex items-center justify-center text-white font-bold">
                                                <%= user.username.charAt(0).toUpperCase() %>
                                            </div>
                                            <span class="font-semibold text-gray-800"><%= user.username %></span>
                                        </div>
                                    </td>

                                    <!-- EMAIL -->
                                    <td class="px-6 py-5 text-gray-600"><%= user.email %></td>

                                    <!-- ACTIVE STATUS -->
                                    <td class="px-6 py-5">
                                        <% 
                                            const badgeClass = user.isActive 
                                                ? "bg-green-100 text-green-700 border-green-200" 
                                                : "bg-red-100 text-red-700 border-red-200"; 
                                            const badgeText = user.isActive ? "Active" : "Inactive";
                                            const badgeIcon = user.isActive ? "fa-check-circle" : "fa-times-circle";
                                        %>
                                        <span class="px-4 py-2 rounded-lg text-sm font-semibold border-2 <%= badgeClass %> inline-flex items-center space-x-1">
                                            <i class="fas <%= badgeIcon %>"></i>
                                            <span><%= badgeText %></span>
                                        </span>
                                    </td>

                                    <!-- ACTION BUTTON -->
                                    <td class="px-6 py-5">
                                        <button class="viewUserBtn px-4 py-2 bg-gradient-to-r from-gray-700 to-black text-white rounded-lg hover-lift font-medium text-sm flex items-center space-x-2" data-id="<%= user._id %>" data-isActive="<%= user.isActive %>" data-name="<%= user.username %>">
                                            <i class="fas fa-eye"></i>
                                            <span>View</span>
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="bg-white/50 px-6 py-4 border-t border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="text-sm text-gray-600 font-medium">
                            Showing 
                            <span class="text-gray-800 font-bold"><%= (currentPage - 1) * 5 + 1 %></span> 
                            to 
                            <span class="text-gray-800 font-bold"><%= Math.min(currentPage * 5, totalUser) %></span> 
                            of 
                            <span class="text-gray-800 font-bold"><%= totalUser %></span> customers
                        </div>

                        <div class="flex items-center gap-2">
                            <% if (currentPage > 1) { %>
                            <a href="?page=<%= currentPage - 1 %>&status=<%= status %>"
                                class="w-10 h-10 flex items-center justify-center rounded-lg bg-white hover:bg-gray-200 border-2 border-gray-300 transition-all">
                                <i class="fas fa-chevron-left text-gray-700"></i>
                            </a>
                            <% } %>
                            <% for (let i = 1; i <= totalPage; i++) { %>
                            <a href="?page=<%= i %>&status=<%= status %>"
                                class="w-10 h-10 flex items-center justify-center rounded-lg font-semibold transition-all
                                <%= i === currentPage ? 'gradient-bg text-white shadow-lg' : 'bg-white hover:bg-gray-200 border-2 border-gray-300 text-gray-700' %>">
                                <%= i %>
                            </a>
                            <% } %>
                            <% if (currentPage < totalPage) { %>
                            <a href="?page=<%= currentPage + 1 %>&status=<%= status %>"
                                class="w-10 h-10 flex items-center justify-center rounded-lg bg-white hover:bg-gray-200 border-2 border-gray-300 transition-all">
                                <i class="fas fa-chevron-right text-gray-700"></i>
                            </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Status Modal -->
            <form action="/admin/users/edit" method="post">
                <div id="popup" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
                    <div class="glass-effect rounded-2xl w-96 shadow-2xl border border-white/20 p-8">
                        <div class="mb-6">
                            <h2 class="text-2xl font-bold text-gray-800 mb-2">User Status</h2>
                            <div class="w-12 h-1 bg-gradient-to-r from-gray-700 to-black rounded-full"></div>
                        </div>

                        <div class="space-y-4 mb-6">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-gray-700 to-black flex items-center justify-center text-white">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 font-medium">Customer Name</p>
                                    <p class="font-semibold text-gray-800" id="popupName"></p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-gray-700 to-black flex items-center justify-center text-white">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 font-medium">Current Status</p>
                                    <p class="font-semibold text-gray-800" id="popupStatus"></p>
                                </div>
                            </div>
                        </div>

                        <div class="flex gap-3 mb-6">
                            <button type="submit" id="activateBtn" onclick="setData(true)" class="flex-1 px-4 py-3 bg-green-600 hover:bg-green-700 text-white rounded-xl font-medium transition-all flex items-center justify-center space-x-2">
                                <i class="fas fa-check-circle"></i>
                                <span>Activate</span>
                            </button>
                            <button type="submit" id="deactivateBtn" onclick="setData(false)" class="flex-1 px-4 py-3 bg-red-600 hover:bg-red-700 text-white rounded-xl font-medium transition-all flex items-center justify-center space-x-2">
                                <i class="fas fa-times-circle"></i>
                                <span>Deactivate</span>
                            </button>
                        </div>

                        <input type="hidden" id="isActive" name="isActive">
                        <input type="hidden" id="userId" name="id">

                        <button type="button" id="closePopup" class="w-full py-3 text-gray-600 hover:text-gray-800 font-medium transition-all">
                            Close
                        </button>
                    </div>
                </div>
            </form>

            <!-- Filter Modal -->
            <div id="filterModal" class="fixed inset-0 bg-black bg-opacity-40 flex justify-center items-center hidden z-50">
                <div class="bg-white w-72 p-6 rounded-xl shadow-lg">
                    <h3 class="text-xl font-semibold mb-4">Filter by Status</h3>
                </div>
            </div>
        </main>
    </div>

    <script>
        let searchTxt = document.getElementById('searchBox')
        let tbody = document.getElementById('tableBody')
        let rows = tbody.getElementsByTagName('tr')
        
        function setData(msg){
            const status = document.getElementById('isActive')
            status.value = msg
        }

        let timer;
        function handleSearch(value) {
            clearTimeout(timer);
            timer = setTimeout(() => {
                const params = new URLSearchParams(window.location.search);
                params.set("search", value);
                params.set("page", 1);
                window.location.search = params.toString();
            }, 400);
        }

        function openFilterModal() {
            document.getElementById("filterModal").classList.remove("hidden");
        }

        function closeFilterModal() {
            document.getElementById("filterModal").classList.add("hidden");
        }

        const popup = document.getElementById('popup');
        const popupName = document.getElementById('popupName');
        const popupStatus = document.getElementById('popupStatus');

        const activateBtn = document.getElementById('activateBtn');
        const deactivateBtn = document.getElementById('deactivateBtn');
        const closePopup = document.getElementById('closePopup');
        const userId = document.getElementById('userId')

        document.querySelectorAll('.viewUserBtn').forEach(btn => {
            btn.addEventListener('click', () => {
                let id = btn.dataset.id;
                let name = btn.dataset.name;
                let status = btn.dataset.isactive == "true"
                
                if(status==true){
                    activateBtn.classList.add('hidden')
                    deactivateBtn.classList.remove('hidden')
                }else{
                    deactivateBtn.classList.add('hidden')
                    activateBtn.classList.remove('hidden')
                }
                
                popupName.innerText = name;
                popupStatus.innerText = status ? "Active" : "Inactive";
                userId.value = id
                activateBtn.dataset.id = id;
                deactivateBtn.dataset.id = id;

                popup.classList.remove('hidden');
            });
        });

        closePopup.addEventListener('click', () => {
            popup.classList.add('hidden');
        });
    </script>

</body>
</html>