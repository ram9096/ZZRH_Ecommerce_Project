<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 font-sans">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">#ZZRH</h1>
        <button class="p-2 hover:bg-gray-100 rounded-lg">
            <i class="far fa-bell text-xl"></i>
        </button>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-white min-h-screen border-r border-gray-100 p-6">
            <nav class="space-y-4">
                <a href="/admin/home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-900">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/users" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-gray-100 text-gray-700">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/products" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cube"></i>
                    <span>Orders</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-chart-line"></i>
                    <span>Analytics</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/category" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-list-ul"></i>
                    <span>Categories</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-gift"></i>
                    <span>Offers</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-image"></i>
                    <span>Banners</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </nav>
            
            <div class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                <a href="#" class="flex items-center space-x-3 text-gray-700 hover:text-gray-900">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            <h2 class="text-4xl font-bold mb-8">Customers</h2>

            <!-- Search Bar -->
            <div class="bg-red-50 rounded-lg p-4 mb-6">
                <div class="flex items-center gap-3">
                    <i class="fas fa-search text-red-400"></i>
                    <input type="text" id="searchBox" placeholder="Search customers..." class="bg-transparent flex-1 outline-none text-gray-700 placeholder-gray-500">
                </div>
            </div>

            <!-- Filters -->
            <div class="flex gap-3 mb-6">
                <form action="/admin/users" method="GET">
                        <select name="status" onchange="this.form.submit()" class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition">
                            <option value="" <% if(status == ""){ %> selected <% } %>>All</option>
                            <option value="true" <% if(status == "true"){ %> selected <% } %>>Active</option>
                            <option value="false" <% if(status == "false"){ %> selected <% } %>>Inactive</option>
                        </select>
                        
                        <select name="sort" onchange="this.form.submit()" class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition"  >
                            
                            <option value="latest">Latest</option>
                            <option value="oldest">Oldest</option>
                        </select>
                    </form>
                
                <!-- <button class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition">
                    Sort by
                </button> -->
            </div>

            <!-- Customer Table -->
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="text-left px-6 py-4 font-semibold text-gray-700">Customer</th>
                            <th class="text-left px-6 py-4 font-semibold text-gray-700">Contact</th>
                            <!-- <th class="text-left px-6 py-4 font-semibold text-gray-700">Orders</th> -->
                            <th class="text-left px-6 py-4 font-semibold text-gray-700">Status</th>
                            <th class="text-left px-6 py-4 font-semibold text-gray-700">Actions</th>
                        </tr>
                    </thead>

                    <tbody id="tableBody">
                        <% data.forEach(user => { %>
                            <tr class="border-b border-gray-200 hover:bg-gray-50">
                                
                                <!-- USER NAME -->
                                <td class="px-6 py-4"><%= user.username %></td>

                                <!-- EMAIL -->
                                <td class="px-6 py-4 text-gray-500"><%= user.email %></td>
                                <!-- ACTIVE STATUS -->
                                <td class="px-6 py-4">
                                    <% 
                                        const badgeClass = user.isActive 
                                            ? "bg-green-100 text-green-700" 
                                            : "bg-red-100 text-red-700"; 
                                        const badgeText = user.isActive ? "Active" : "Inactive";
                                    %>

                                    <span class="px-3 py-1 rounded-full text-sm font-medium <%= badgeClass %>">
                                        <%= badgeText %>
                                    </span>
                                </td>
                                <!-- ACTION BUTTON -->
                                <td class="px-6 py-4">
                                    <button class="text-purple-600 hover:text-purple-800 font-medium viewUserBtn" data-id="<%= user._id %>" data-isActive="<%= user.isActive %>" data-name="<%= user.username %>">View</button>
                
                                </td>

                            </tr>
                        <% }) %>
                    </tbody>



                    <form action="/admin/users/edit" method="post">
                        <div id="popup" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
                            <div class="bg-white p-6 rounded-xl w-80 shadow-lg">
                                <h2 class="text-xl font-bold mb-3">User Status</h2>

                                <p><strong>Name:</strong> <span id="popupName"></span></p>
                                <p><strong>Status:</strong> <span id="popupStatus"></span></p>

                                <div class="flex justify-between mt-5">
                                    <button id="activateBtn" onclick="setData(true)" class="bg-green-600 text-white px-4 py-2 rounded">Activate</button>
            
                                    <button id="deactivateBtn" onclick="setData(false)" class="bg-red-600 text-white px-4 py-2 rounded">Deactivate</button>
                                    
                                </div>
                                <input type="hidden" id="isActive" name="isActive">
                                <input type="hidden" id="userId" name="id">
                                <button id="closePopup" class="mt-4 text-gray-600 underline">Close</button>
                            </div>
                        </div>
                    </form>
                </table>
            </div>


            <!-- Filter Modal -->
            <div id="filterModal" 
                class="fixed inset-0 bg-black bg-opacity-40 flex justify-center items-center hidden z-50">

                <div class="bg-white w-72 p-6 rounded-xl shadow-lg">
                    <h3 class="text-xl font-semibold mb-4">Filter by Status</h3>

                    
                </div>

            </div>


            


            <!-- Footer -->
            <div class="flex items-center justify-between mt-6">
                <div class="text-sm text-gray-600">
                    Showing 1 to 5 of 124 customers
                </div>
                
                <!-- Pagination -->
                <div class="flex items-center gap-2">
                    <button class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-gray-100 transition">
                        <i class="fas fa-chevron-left text-gray-600"></i>
                    </button>
                    <button class="w-10 h-10 flex items-center justify-center bg-red-100 text-gray-900 rounded-lg font-medium">1</button>
                    <button class="w-10 h-10 flex items-center justify-center hover:bg-gray-100 text-gray-700 rounded-lg transition">2</button>
                    <button class="w-10 h-10 flex items-center justify-center hover:bg-gray-100 text-gray-700 rounded-lg transition">3</button>
                    <button class="w-10 h-10 flex items-center justify-center hover:bg-gray-100 text-gray-700 rounded-lg transition">4</button>
                    <button class="w-10 h-10 flex items-center justify-center hover:bg-gray-100 text-gray-700 rounded-lg transition">5</button>
                    <button class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-gray-100 transition">
                        <i class="fas fa-chevron-right text-gray-600"></i>
                    </button>
                </div>
            </div>
        </main>
    </div>


    <script>
        let searchTxt = document.getElementById('searchBox')
        let tbody = document.getElementById('tableBody')
        let rows = tbody.getElementsByTagName('tr')
        function setData(msg){
            const status = document.getElementById('isActive')
            status.value = msg
        }

        searchTxt.addEventListener('keyup',(e)=>{
            let tempText = searchTxt.value
            for(i of rows){
                let cell = i.getElementsByTagName('td')
                let match  = false
                for(j in cell[0]){
                    if(cell[0].innerText.toLowerCase().includes(tempText.toLowerCase())){
                        match = true;
                        break;
                    }
                }
                
                i.style.display = match ? '' : 'none';
            }
        })
        function openFilterModal() {
            document.getElementById("filterModal").classList.remove("hidden");
        }

        function closeFilterModal() {
            document.getElementById("filterModal").classList.add("hidden");
        }







        const popup = document.getElementById('popup');
        const popupName = document.getElementById('popupName');
        const popupStatus = document.getElementById('popupStatus');

        const activateBtn = document.getElementById('activateBtn');
        const deactivateBtn = document.getElementById('deactivateBtn');
        const closePopup = document.getElementById('closePopup');
        const userId = document.getElementById('userId')

        document.querySelectorAll('.viewUserBtn').forEach(btn => {
            btn.addEventListener('click', () => {
                
                let id = btn.dataset.id;
                let name = btn.dataset.name;
                let status = btn.dataset.isactive == "true"
                if(status==true){
                    activateBtn.classList.add('hidden')
                    deactivateBtn.classList.remove('hidden')
                }else{
                    deactivateBtn.classList.add('hidden')
                    activateBtn.classList.remove('hidden')
                }
                popupName.innerText = name;
                popupStatus.innerText = status ? "Active" : "Inactive";
                userId.value = id
                activateBtn.dataset.id = id;
                deactivateBtn.dataset.id = id;

                popup.classList.remove('hidden');
            });
        });

        closePopup.addEventListener('click', () => {
            popup.classList.add('hidden');
        });

    </script>

</body>
</html>