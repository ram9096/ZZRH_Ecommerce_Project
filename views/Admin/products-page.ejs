<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

  <!-- SweetAlert2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <header class="bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">#ZZRH</h1>
        <button class="p-2 hover:bg-gray-100 rounded-lg">
            <i class="far fa-bell text-xl"></i>
        </button>
    </header>
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-white min-h-screen border-r border-gray-100 p-6">
            <nav class="space-y-4">
                <a href="/admin/home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-900">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/users" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/products" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-gray-100 text-gray-700">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/orders" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cube"></i>
                    <span>Orders</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-chart-line"></i>
                    <span>Analytics</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/category" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-list-ul"></i>
                    <span>Categories</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-gift"></i>
                    <span>Offers</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-image"></i>
                    <span>Banners</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
                <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </nav>
            
            <div class=" flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-100 text-gray-700">
                <a href="/admin/logout" class="flex items-center space-x-3 text-gray-700 hover:text-gray-900">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            <!-- Header -->
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-3xl font-bold text-gray-900">Products</h2>
                <div class="flex items-center gap-4">
                    <button class="p-2 hover:bg-gray-100 rounded-lg">
                        <i class="far fa-bell text-gray-600"></i>
                    </button>
                    <a href="/admin/product-add">
                        <button class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 font-medium">
                            Add Product
                        </button>
                    </a>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="mb-6">
                <div class="relative">
                    <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    <input 
                        type="text" 
                        placeholder="Search products..." 
                        onkeyup="handleSearch(this.value)"
                        value="<%= search %>"
                        class="w-full pl-12 pr-4 py-3 bg-white border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                    >
                </div>
            </div>

            <!-- Filter and Sort -->
            <div class="flex gap-3 mb-6">
                <form action="/admin/products" method="GET">
                        <select name="status" onchange="this.form.submit()" class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition">
                            <option value="" <% if(status == ""){ %> selected <% } %>>All</option>
                            <option value="true" <% if(status == "true"){ %> selected <% } %>>Active</option>
                            <option value="false" <% if(status == "false"){ %> selected <% } %>>Inactive</option>
                        </select>
                        
                        <select name="sort" onchange="this.form.submit()" class="px-6 py-2 bg-red-100 rounded-lg font-medium hover:bg-red-200 transition"  > 
                            <option value="latest" <%= sort === "latest" ? "selected" : "" %> >Latest</option>
                            <option value="oldest" <%= sort === "oldest" ? "selected" : "" %> >Oldest</option>
                        </select>
                    </form>
            </div>

            <% if(error) {%>
                <script>
                Swal.fire({
                        toast: true,
                        icon: 'error',
                        title: '<%=error%>',
                        position: 'top-right',
                        showConfirmButton: false,
                        timer: 3000
                    });
                </script>
            <% } %>

            <!-- Products Table -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Product Name</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">SKU</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Category</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% data.forEach((user,i)=>{ %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 text-gray-900"><%= user.name %></td>
                                <td class="px-6 py-4 text-gray-900"> <%= user.SKU %> </td>
                                <td class="px-6 py-4 text-gray-900"> <%= user.categoryId.categoryName %></td>
                                
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <a href="/admin/products/<%= user._id %>">
                                            <button class="text-gray-600 hover:text-gray-900">Edit</button>
                                        </a>
                                    </div>
                                </td>

                            </tr>
                            <% }) %>
                        
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="flex items-center justify-between mt-6">
                <div class="text-sm text-gray-600">
                    Showing 
                    <%= (currentPage - 1) * 5 + 1 %> 
                    to 
                    <%= Math.min(currentPage * 5, totalUser) %> 
                    of 
                    <%= totalUser %> products
                </div>

                <div class="flex items-center gap-2">
                    <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %>&status=<%= status %>"
                        class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-gray-100">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <% } %>
                    <% for (let i = 1; i <= totalPage; i++) { %>
                    <a href="?page=<%= i %>&status=<%= status %>"
                        class="w-10 h-10 flex items-center justify-center rounded-lg
                        <%= i === currentPage ? 'bg-red-100 font-bold' : 'hover:bg-gray-100' %>">
                        <%= i %>
                    </a>
                    <% } %>
                    <% if (currentPage < totalPage) { %>
                    <a href="?page=<%= currentPage + 1 %>&status=<%= status %>"
                        class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-gray-100">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <% } %>
                </div>
                </div>
        </main>
    </div>

    <script>
        let timer;
        function handleSearch(value) {
            clearTimeout(timer);
            timer = setTimeout(() => {
                const params = new URLSearchParams(window.location.search);
                params.set("search", value);
                params.set("page", 1);
                window.location.search = params.toString();
            }, 500);
        }
    </script>
</body>
</html>